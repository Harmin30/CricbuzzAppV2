@model IEnumerable<CricbuzzAppV2.Models.Audit>

@{
    ViewData["Title"] = "Activity Logs";
}

<div class="container py-4">
    <!-- ✅ Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold mb-1 d-flex align-items-center text-success">
                <i class="bi bi-activity me-2"></i> Activity Logs
            </h2>
            <p class="text-muted mb-0">A complete audit trail of every action in the system.</p>
        </div>

        <a href="@Url.Action("Index", "Audits")" class="btn btn-outline-success btn-refresh">
    <i class="bi bi-arrow-clockwise me-1"></i> Refresh
        </a>    

    </div>

    <!-- ✅ Filter Section -->
    <div class="card glass-card mb-4">
        <div class="card-body">
            <form method="get" class="row g-3 align-items-end">
                <!-- Search -->
                <div class="col-md-4">
                    <label class="form-label fw-semibold text-success">Search</label>
                    <div class="input-group">
                        <span class="input-group-text bg-success text-white border-0">
                            <i class="bi bi-search"></i>
                        </span>
                        <input type="text"
                               name="searchString"
                               class="form-control"
                               placeholder="Search by user, entity, or details..."
                               value="@Context.Request.Query["searchString"]" />
                    </div>
                </div>

                <!-- Action -->
                <div class="col-md-3">
                    <label class="form-label fw-semibold text-success">Action</label>
                    <select name="filterAction" class="form-select border-success-subtle">
                        <option value="">All Actions</option>
                        @foreach (var action in ViewBag.Actions)
                        {
                            <option value="@action"
                                    selected="@(Context.Request.Query["filterAction"] == action)">
                                @action
                            </option>
                        }
                    </select>
                </div>

                <!-- Entity -->
                <div class="col-md-3">
                    <label class="form-label fw-semibold text-success">Entity</label>
                    <select name="filterEntity" class="form-select border-success-subtle">
                        <option value="">All Entities</option>
                        @foreach (var entity in ViewBag.Entities)
                        {
                            <option value="@entity"
                                    selected="@(Context.Request.Query["filterEntity"] == entity)">
                                @entity
                            </option>
                        }
                    </select>
                </div>

                <!-- Apply -->
                <div class="col-md-2 d-grid">
                    <button type="submit" class="btn btn-gradient shadow-sm fw-semibold">
                        <i class="bi bi-funnel-fill me-1"></i> Apply
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- ✅ Logs Table -->
    <div class="card glass-card shadow-lg border-0">
        <div class="card-header bg-gradient-success text-white fw-semibold d-flex align-items-center">
            <i class="bi bi-list-check me-2"></i> System Activity
        </div>

        <div class="card-body p-0">
            <div class="table-responsive" style="max-height: 70vh; overflow-y: auto;">
                <table class="table align-middle table-hover mb-0">
                    <thead class="sticky-top">
                        <tr>
                            <th>⏰ Timestamp</th>
                            <th>👤 User</th>
                            <th>⚙️ Action</th>
                            <th>📦 Entity</th>
                            <th>🆔 ID</th>
                            <th>📝 Details</th>
                        </tr>
                    </thead>

                    <tbody>
                        @if (!Model.Any())
                        {
                            <tr>
                                <td colspan="6" class="text-center py-5 text-muted">
                                    <i class="bi bi-inbox fs-3 d-block mb-2"></i>
                                    No logs available yet.
                                </td>
                            </tr>
                        }
                        else
                        {
                            @foreach (var item in Model)
                            {
                                <tr class="log-row">
                                    <td>@item.Timestamp.ToString("dd MMM yyyy, HH:mm:ss")</td>
                                    <td class="fw-semibold text-dark">@item.UserName</td>
                                    <td>
                                        <span class="badge action-badge @(item.Action)">
                                            <i class="bi @(item.Action switch {
                                                "Created" => "bi-plus-circle",
                                                "Updated" => "bi-pencil-square",
                                                "Deleted" => "bi-trash3",
                                                _ => "bi-info-circle"
                                            }) me-1"></i>
                                            @item.Action
                                        </span>
                                    </td>
                                    <td>@item.EntityName</td>
                                    <td><code>@item.EntityId</code></td>
                                    <td>
                                        @if (item.Action == "Created")
                                        {
                                            <div class="detail-box created">
                                                <i class="bi bi-plus-circle-fill me-1 text-success"></i>
                                                <strong>Created:</strong>
                                                <div class="small text-muted">@item.Details</div>
                                            </div>
                                        }
                                        else if (item.Action == "Updated")
                                        {
                                            <div class="detail-box updated">
                                                <i class="bi bi-pencil-square me-1 text-primary"></i>
                                                <strong>Updated:</strong>
                                                <div class="small text-muted">@item.Details</div>
                                            </div>
                                        }
                                        else if (item.Action == "Deleted")
                                        {
                                            <div class="detail-box deleted">
                                                <i class="bi bi-trash3-fill me-1 text-danger"></i>
                                                <strong>Deleted:</strong>
                                                <div class="small text-muted">@item.Details</div>
                                            </div>
                                        }
                                        else
                                        {
                                            <div class="detail-box other">
                                                <i class="bi bi-info-circle me-1 text-secondary"></i>
                                                <div class="small text-muted">@item.Details</div>
                                            </div>
                                        }
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- ✅ Styles -->
<style>
    /* --- Detail Boxes --- */
    .detail-box {
        border-left: 4px solid transparent;
        padding: 0.5rem 0.75rem;
        border-radius: 10px;
        background: rgba(0, 0, 0, 0.02);
        transition: all 0.3s ease;
    }

    .detail-box:hover {
        background: rgba(0, 0, 0, 0.05);
    }

    .detail-box.created {
        border-left-color: #198754;
        background: linear-gradient(90deg, #e7f9f0, #d4f8e8);
    }

    .detail-box.updated {
        border-left-color: #0d6efd;
        background: linear-gradient(90deg, #e7f0ff, #d8e9ff);
    }

    .detail-box.deleted {
        border-left-color: #dc3545;
        background: linear-gradient(90deg, #fde8e8, #fbdcdc);
    }

    .detail-box.other {
        border-left-color: #6c757d;
        background: #f8f9fa;
    }

    /* --- Layout --- */
    body {
        background: linear-gradient(135deg, #f9fff9 0%, #e8f8f1 100%);
    }

    .glass-card {
        backdrop-filter: blur(10px);
        background: rgba(255, 255, 255, 0.7);
        border-radius: 16px;
        border: 1px solid rgba(25, 135, 84, 0.1);
        box-shadow: 0 4px 25px rgba(0, 0, 0, 0.05);
        transition: all 0.3s ease;
    }

    .glass-card:hover {
        box-shadow: 0 6px 30px rgba(25, 135, 84, 0.2);
    }

    /* --- Buttons --- */
    .btn-gradient {
        background: linear-gradient(90deg, #198754, #2bb673);
        color: white;
        border: none;
        border-radius: 10px;
        padding: 0.5rem 1rem;
    }

    .btn-gradient:hover {
        filter: brightness(1.1);
        transform: scale(1.05);
    }

    /* --- Header --- */
    .bg-gradient-success {
        background: linear-gradient(90deg, #198754, #2bb673);
        border-top-left-radius: 12px;
        border-top-right-radius: 12px;
    }

    /* --- Table --- */
    table {
        border-collapse: separate;
        border-spacing: 0;
    }

    thead {
        background: rgba(25, 135, 84, 0.9);
        color: white;
        text-transform: uppercase;
        font-size: 0.85rem;
    }

    thead th {
        position: sticky;
        top: 0;
        z-index: 5;
        padding: 0.75rem;
    }

    tbody tr {
        border-bottom: 1px solid rgba(0, 0, 0, 0.05);
    }

    .log-row:hover {
        background: rgba(25, 135, 84, 0.07);
        transition: 0.2s;
    }

    /* --- Badges --- */
    .badge.action-badge {
        border-radius: 30px;
        font-size: 0.8rem;
        font-weight: 600;
        padding: 0.5em 0.8em;
        display: inline-flex;
        align-items: center;
    }

    .Created {
        background: linear-gradient(90deg, #d4f8e8, #b1f1ce);
        color: #198754;
    }

    .Updated {
        background: linear-gradient(90deg, #d8e9ff, #b9d3ff);
        color: #0d6efd;
    }

    .Deleted {
        background: linear-gradient(90deg, #fde2e2, #fbbdbd);
        color: #dc3545;
    }

    code {
        background-color: rgba(0, 0, 0, 0.05);
        padding: 3px 6px;
        border-radius: 4px;
        font-size: 0.85rem;
    }

    /* Refresh Button */
.btn-refresh {
    border: 2px solid #198754;
    color: #198754;
    font-weight: 600;
    letter-spacing: 0.5px;
    border-radius: 8px;
    transition: all 0.3s ease;
    box-shadow: 0 0 0 rgba(25, 135, 84, 0);
}

.btn-refresh i {
    transition: transform 0.3s ease;
}

/* Hover animation */
.btn-refresh:hover {
    background-color: #198754;
    color: #fff;
    transform: scale(1.05);
    box-shadow: 0 4px 15px rgba(25, 135, 84, 0.4);
}

.btn-refresh:hover i {
    transform: rotate(180deg);
}


    /* --- Scrollbar --- */
    ::-webkit-scrollbar {
        width: 8px;
    }

    ::-webkit-scrollbar-thumb {
        background: rgba(25, 135, 84, 0.4);
        border-radius: 8px;
    }

    @@media (max-width: 768px) {
        .filter-card form .col-md-2 {
            margin-top: 1rem;
        }
    }
</style>
