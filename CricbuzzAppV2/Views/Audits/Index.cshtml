@model IEnumerable<CricbuzzAppV2.ViewModels.AuditViewModel>


@{
    ViewData["Title"] = "Activity Logs";
}

<div class="container py-4">
    <!-- ✅ Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold mb-1 d-flex align-items-center text-success">
                <i class="bi bi-activity me-2"></i> Activity Logs
            </h2>
            <p class="text-muted mb-0">A complete audit trail of every action in the system.</p>
        </div>

        <a href="@Url.Action("Index", "Audits")" class="btn btn-outline-success btn-refresh">
    <i class="bi bi-arrow-clockwise me-1"></i> Refresh
        </a>    

    </div>

    <!-- ✅ Filter Section -->
    <div class="card glass-card mb-4">
        <div class="card-body">
            <form method="get" class="row g-3 align-items-end">
                <!-- Search -->
                <div class="col-md-4">
                    <label class="form-label fw-semibold text-success">Search</label>
                    <div class="input-group">
                        <span class="input-group-text bg-success text-white border-0">
                            <i class="bi bi-search"></i>
                        </span>
                        <input type="text"
                               name="searchString"
                               class="form-control"
                               placeholder="Search by user, entity, or details..."
                               value="@Context.Request.Query["searchString"]" />
                    </div>
                </div>

                <!-- Action -->
                <div class="col-md-3">
                    <label class="form-label fw-semibold text-success">Action</label>
                    <select name="filterAction" class="form-select border-success-subtle">
                        <option value="">All Actions</option>
                        @foreach (var action in ViewBag.Actions)
                        {
                            <option value="@action"
                                    selected="@(Context.Request.Query["filterAction"] == action)">
                                @action
                            </option>
                        }
                    </select>
                </div>

                <!-- Entity -->
                <div class="col-md-3">
                    <label class="form-label fw-semibold text-success">Entity</label>
                    <select name="filterEntity" class="form-select border-success-subtle">
                        <option value="">All Entities</option>
                        @foreach (var entity in ViewBag.Entities)
                        {
                            <option value="@entity"
                                    selected="@(Context.Request.Query["filterEntity"] == entity)">
                                @entity
                            </option>
                        }
                    </select>
                </div>

                <!-- Apply -->
                <div class="col-md-2 d-grid">
                    <button type="submit" class="btn btn-gradient shadow-sm fw-semibold">
                        <i class="bi bi-funnel-fill me-1"></i> Apply
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- ✅ Logs Table -->
    <!-- Table (Desktop) -->
    <div class="card shadow-sm d-none d-md-block">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th>Time</th>
                        <th>User</th>
                        <th>Action</th>
                        <th>Activity</th>
                    </tr>
                </thead>
                <tbody>
                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="4" class="text-center text-muted py-4">
                                No activity recorded.
                            </td>
                        </tr>
                    }
                    else
                    {
                        @foreach (var log in Model)
{
    <tr>
        <!-- Time -->
        <td class="text-muted small">
            @log.Timestamp.ToString("dd MMM yyyy, hh:mm tt")
        </td>

        <!-- User -->
        <td class="fw-semibold">
            <i class="bi bi-person-circle me-1"></i>
            @log.UserName
        </td>

        <!-- Action -->
        <td>
            <span class="badge
                @(log.Action == "Created" ? "bg-success" :
                  log.Action == "Updated" ? "bg-primary" :
                  log.Action == "Deleted" ? "bg-danger" :
                  "bg-secondary")">
                @log.Action
            </span>
        </td>

        <!-- Activity -->
        <td>
            <strong>@log.Summary</strong>

            @if (log.Groups.Any())
            {
                <details class="mt-1">
                    <summary class="small text-success">View details</summary>

                    @foreach (var group in log.Groups)
                    {
                        <div class="mt-2">
                            <div class="fw-semibold">@group.Key</div>
                            <ul class="mb-1">
                                @foreach (var item in group.Value)
                                {
                                    <li class="small">@item</li>
                                }
                            </ul>
                        </div>
                    }
                </details>
            }
        </td>
    </tr>
}

                    }
                </tbody>
            </table>
        </div>
    </div>

    <!-- Mobile View -->
<div class="d-md-none">
    @foreach (var log in Model)
    {
        <div class="card mb-2 shadow-sm">
            <div class="card-body p-3">

                <div class="d-flex justify-content-between">
                    <strong>@log.UserName</strong>
                    <span class="badge
                        @(log.Action == "Created" ? "bg-success" :
                          log.Action == "Updated" ? "bg-primary" :
                          log.Action == "Deleted" ? "bg-danger" :
                          "bg-secondary")">
                        @log.Action
                    </span>
                </div>

                <div class="mt-2 fw-semibold">
                    @log.Summary
                </div>

                @if (log.Groups.Any())
                {
                    <details class="mt-1">
                        <summary class="small text-success">View details</summary>

                        @foreach (var group in log.Groups)
                        {
                            <div class="mt-2">
                                <div class="fw-semibold">@group.Key</div>
                                <ul class="mb-1">
                                    @foreach (var item in group.Value)
                                    {
                                        <li class="small">@item</li>
                                    }
                                </ul>
                            </div>
                        }
                    </details>
                }

                <div class="text-muted small mt-2">
                    @log.Timestamp.ToString("dd MMM yyyy, hh:mm tt")
                </div>
            </div>
        </div>
    }
</div>

    </div>
@if (ViewBag.TotalPages > 1)
{
    int currentPage = ViewBag.CurrentPage;
    int totalPages = ViewBag.TotalPages;

    int startPage = Math.Max(1, currentPage - 2);
    int endPage = Math.Min(totalPages, currentPage + 2);

    <nav class="mt-4">
        <ul class="pagination justify-content-center align-items-center">

            <!-- PREVIOUS -->
            <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                <a class="page-link"
                   href="@Url.Action("Index", new {
                       page = currentPage - 1,
                       searchString = Context.Request.Query["searchString"],
                       filterAction = Context.Request.Query["filterAction"],
                       filterEntity = Context.Request.Query["filterEntity"]
                   })">
                    ‹ Prev
                </a>
            </li>

            <!-- FIRST PAGE -->
            @if (startPage > 1)
            {
                <li class="page-item">
                    <a class="page-link"
                       href="@Url.Action("Index", new {
                           page = 1,
                           searchString = Context.Request.Query["searchString"],
                           filterAction = Context.Request.Query["filterAction"],
                           filterEntity = Context.Request.Query["filterEntity"]
                       })">1</a>
                </li>
                <li class="page-item disabled">
                    <span class="page-link">…</span>
                </li>
            }

            <!-- PAGE RANGE -->
            @for (int i = startPage; i <= endPage; i++)
            {
                <li class="page-item @(i == currentPage ? "active" : "")">
                    <a class="page-link"
                       href="@Url.Action("Index", new {
                           page = i,
                           searchString = Context.Request.Query["searchString"],
                           filterAction = Context.Request.Query["filterAction"],
                           filterEntity = Context.Request.Query["filterEntity"]
                       })">
                        @i
                    </a>
                </li>
            }

            <!-- LAST PAGE -->
            @if (endPage < totalPages)
            {
                <li class="page-item disabled">
                    <span class="page-link">…</span>
                </li>
                <li class="page-item">
                    <a class="page-link"
                       href="@Url.Action("Index", new {
                           page = totalPages,
                           searchString = Context.Request.Query["searchString"],
                           filterAction = Context.Request.Query["filterAction"],
                           filterEntity = Context.Request.Query["filterEntity"]
                       })">
                        @totalPages
                    </a>
                </li>
            }

            <!-- NEXT -->
            <li class="page-item @(currentPage == totalPages ? "disabled" : "")">
                <a class="page-link"
                   href="@Url.Action("Index", new {
                       page = currentPage + 1,
                       searchString = Context.Request.Query["searchString"],
                       filterAction = Context.Request.Query["filterAction"],
                       filterEntity = Context.Request.Query["filterEntity"]
                   })">
                    Next ›
                </a>
            </li>
        </ul>

        <!-- PAGE INFO -->
        <div class="text-center small text-muted mt-2">
            Page <strong>@currentPage</strong> of <strong>@totalPages</strong>
        </div>
    </nav>
}



<!-- ✅ Styles -->
<style>
    /* --- Detail Boxes --- */
    .detail-box {
        border-left: 4px solid transparent;
        padding: 0.5rem 0.75rem;
        border-radius: 10px;
        background: rgba(0, 0, 0, 0.02);
        transition: all 0.3s ease;
    }

    table tbody tr:hover {
        background-color: rgba(25, 135, 84, 0.05);
    }

    .badge {
        padding: 0.4em 0.7em;
        border-radius: 20px;
    }


    .detail-box:hover {
        background: rgba(0, 0, 0, 0.05);
    }

    .detail-box.created {
        border-left-color: #198754;
        background: linear-gradient(90deg, #e7f9f0, #d4f8e8);
    }

    .detail-box.updated {
        border-left-color: #0d6efd;
        background: linear-gradient(90deg, #e7f0ff, #d8e9ff);
    }

    .detail-box.deleted {
        border-left-color: #dc3545;
        background: linear-gradient(90deg, #fde8e8, #fbdcdc);
    }

    .detail-box.other {
        border-left-color: #6c757d;
        background: #f8f9fa;
    }

    /* --- Layout --- */
    body {
        background: linear-gradient(135deg, #f9fff9 0%, #e8f8f1 100%);
    }

    .glass-card {
        backdrop-filter: blur(10px);
        background: rgba(255, 255, 255, 0.7);
        border-radius: 16px;
        border: 1px solid rgba(25, 135, 84, 0.1);
        box-shadow: 0 4px 25px rgba(0, 0, 0, 0.05);
        transition: all 0.3s ease;
    }

    .glass-card:hover {
        box-shadow: 0 6px 30px rgba(25, 135, 84, 0.2);
    }

    /* --- Buttons --- */
    .btn-gradient {
        background: linear-gradient(90deg, #198754, #2bb673);
        color: white;
        border: none;
        border-radius: 10px;
        padding: 0.5rem 1rem;
    }

    .btn-gradient:hover {
        filter: brightness(1.1);
        transform: scale(1.05);
    }

    /* --- Header --- */
    .bg-gradient-success {
        background: linear-gradient(90deg, #198754, #2bb673);
        border-top-left-radius: 12px;
        border-top-right-radius: 12px;
    }

    /* --- Table --- */
    table {
        border-collapse: separate;
        border-spacing: 0;
    }

    thead {
        background: rgba(25, 135, 84, 0.9);
        color: white;
        text-transform: uppercase;
        font-size: 0.85rem;
    }

    thead th {
        position: sticky;
        top: 0;
        z-index: 5;
        padding: 0.75rem;
    }

    tbody tr {
        border-bottom: 1px solid rgba(0, 0, 0, 0.05);
    }

    .log-row:hover {
        background: rgba(25, 135, 84, 0.07);
        transition: 0.2s;
    }

    /* --- Badges --- */
    .badge.action-badge {
        border-radius: 30px;
        font-size: 0.8rem;
        font-weight: 600;
        padding: 0.5em 0.8em;
        display: inline-flex;
        align-items: center;
    }

    .Created {
        background: linear-gradient(90deg, #d4f8e8, #b1f1ce);
        color: #198754;
    }

    .Updated {
        background: linear-gradient(90deg, #d8e9ff, #b9d3ff);
        color: #0d6efd;
    }

    .Deleted {
        background: linear-gradient(90deg, #fde2e2, #fbbdbd);
        color: #dc3545;
    }

    code {
        background-color: rgba(0, 0, 0, 0.05);
        padding: 3px 6px;
        border-radius: 4px;
        font-size: 0.85rem;
    }

    /* Refresh Button */
.btn-refresh {
    border: 2px solid #198754;
    color: #198754;
    font-weight: 600;
    letter-spacing: 0.5px;
    border-radius: 8px;
    transition: all 0.3s ease;
    box-shadow: 0 0 0 rgba(25, 135, 84, 0);
}

.btn-refresh i {
    transition: transform 0.3s ease;
}

/* Hover animation */
.btn-refresh:hover {
    background-color: #198754;
    color: #fff;
    transform: scale(1.05);
    box-shadow: 0 4px 15px rgba(25, 135, 84, 0.4);
}

.btn-refresh:hover i {
    transform: rotate(180deg);
}


    /* --- Scrollbar --- */
    ::-webkit-scrollbar {
        width: 8px;
    }

    ::-webkit-scrollbar-thumb {
        background: rgba(25, 135, 84, 0.4);
        border-radius: 8px;
    }

    @@media (max-width: 768px) {
        .filter-card form .col-md-2 {
            margin-top: 1rem;
        }
    }


    .pagination .page-link {
    border-radius: 10px;
    margin: 0 3px;
    color: #198754;
    border: 1px solid rgba(25, 135, 84, 0.3);
    transition: all 0.2s ease;
}

.pagination .page-item.active .page-link {
    background: linear-gradient(90deg, #198754, #2bb673);
    border-color: transparent;
    color: white;
    box-shadow: 0 4px 10px rgba(25, 135, 84, 0.4);
}

.pagination .page-link:hover {
    background-color: rgba(25, 135, 84, 0.1);
}

.pagination .page-item.disabled .page-link {
    opacity: 0.5;
}

</style>
