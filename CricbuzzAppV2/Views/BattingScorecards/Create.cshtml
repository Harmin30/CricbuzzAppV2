@model CricbuzzAppV2.Models.BattingInningsScorecard

@{
    var innings = ViewBag.Innings as CricbuzzAppV2.Models.MatchInnings;
    var players = ViewBag.Players as List<CricbuzzAppV2.Models.Player>;
    ViewData["Title"] = "Add Batting";
}

<div class="container mt-4">
    <div class="d-flex justify-content-center">
        <div class="card shadow-lg p-4 w-100"
             style="max-width:720px;border-radius:18px;">

            <!-- Header -->
            <div class="text-center mb-4">
                <h4 class="fw-bold">
                    <i class="fa-solid fa-cricket-bat-ball text-success me-2"></i>
                    Batting – @innings?.BattingTeam?.TeamName
                </h4>
                <small class="text-muted">
                    Add batting performance for this innings
                </small>
            </div>

            <form asp-action="Create" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="MatchInningsId" />
                @if (!ViewContext.ViewData.ModelState.IsValid &&
                                ViewContext.ViewData.ModelState.ErrorCount > 0)
                {
                    <div asp-validation-summary="All" class="alert alert-danger"></div>
                }




                <!-- Batsman -->
                <div class="mb-3">
                    <label class="form-label fw-semibold">
                        <i class="fa-solid fa-user text-primary me-1"></i>
                        Batsman *
                    </label>
                    <select asp-for="PlayerId" class="form-select">
                        <option value="">-- Select Batsman --</option>
                        @foreach (var p in players)
                        {
                            <option value="@p.PlayerId">@p.FullName</option>
                        }
                    </select>
                    <span asp-validation-for="PlayerId" class="text-danger small"></span>
                </div>

                <!-- Stats -->
                <div class="row g-3">
                    <div class="col-md-3">
                        <label class="form-label fw-semibold">
                            <i class="fa-solid fa-bolt text-warning me-1"></i>
                            Runs *
                        </label>
                        <input asp-for="Runs" class="form-control" />
                        <span asp-validation-for="Runs" class="text-danger small"></span>
                    </div>

                    <div class="col-md-3">
                        <label class="form-label fw-semibold">
                            <i class="fa-solid fa-baseball-bat-ball text-info me-1"></i>
                            Balls *
                        </label>
                        <input asp-for="BallsFaced" class="form-control" />
                        <span asp-validation-for="BallsFaced" class="text-danger small"></span>
                    </div>

                    <div class="col-md-3">
                        <label class="form-label fw-semibold">
                            <i class="fa-solid fa-4 text-success me-1"></i>
                            4s
                        </label>
                        <input asp-for="Fours" class="form-control" />
                    </div>

                    <div class="col-md-3">
                        <label class="form-label fw-semibold">
                            <i class="fa-solid fa-6 text-danger me-1"></i>
                            6s
                        </label>
                        <input asp-for="Sixes" class="form-control" />
                    </div>
                </div>

                <!-- Batting Position -->
                <div class="mt-3">
                    <label class="form-label fw-semibold">
                        <i class="fa-solid fa-list-ol text-secondary me-1"></i>
                        Batting Position *
                    </label>
                    <input asp-for="BattingPosition" class="form-control"
                           placeholder="1 – 11" />
                    <span asp-validation-for="BattingPosition"
                          class="text-danger small"></span>
                </div>

                <!-- How Out -->
                <div class="mt-3">
                    <label class="form-label fw-semibold">
                        <i class="fa-solid fa-circle-xmark text-danger me-1"></i>
                        How Out
                    </label>
                    <select asp-for="HowOut" class="form-select">
                        <option value="">-- Select Dismissal --</option>
                        <option>Not Out</option>
                        <option>Caught</option>
                        <option>Bowled</option>
                        <option>LBW</option>
                        <option>Run Out</option>
                        <option>Stumped</option>
                        <option>Hit Wicket</option>
                        <option>Retired Hurt</option>
                    </select>
                </div>

                <!-- Buttons -->
                <div class="d-flex justify-content-between align-items-center mt-4">
                    <a asp-controller="Matches"
                       asp-action="Details"
                       asp-route-id="@innings?.MatchId"
                       class="btn btn-outline-secondary">
                        <i class="fa-solid fa-arrow-left me-1"></i>
                        Back
                    </a>

                    <button class="btn btn-success btn-lg px-4">
                        <i class="fa-solid fa-plus me-1"></i>
                        Add Batting Entry
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
