@model CricbuzzAppV2.Models.Match
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Add Match";
    Layout = "_Layout";
}

<h2 class="mb-4">➕ Add New Match</h2>

@if (TempData["Error"] != null)
{
    <div class="alert alert-warning">@TempData["Error"]</div>
}

<div class="card shadow-sm p-4">
    <form asp-action="Create" method="post">
        <div class="mb-3">
            <label class="form-label">Team A</label>
            <select asp-for="TeamAId" class="form-select"
                    asp-items="@(new SelectList(ViewData["Teams"] as List<CricbuzzAppV2.Models.Team>, "TeamId", "TeamName"))">
                <option value="">-- Select Team A --</option>
            </select>
            <span asp-validation-for="TeamAId" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label">Team B</label>
            <select asp-for="TeamBId" class="form-select"
                    asp-items="@(new SelectList(ViewData["Teams"] as List<CricbuzzAppV2.Models.Team>, "TeamId", "TeamName"))">
                <option value="">-- Select Team B --</option>
            </select>
            <span asp-validation-for="TeamBId" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="MatchType" class="form-label">Match Format</label>
            <select asp-for="MatchType" class="form-select">
                <option value="">-- Select Format --</option>
                <option value="Test">Test</option>
                <option value="ODI">ODI</option>
                <option value="T20">T20</option>
            </select>
            <span asp-validation-for="MatchType" class="text-danger"></span>
        </div>


        <div class="mb-3">
            <label asp-for="Date" class="form-label"></label>
            <input asp-for="Date" type="date" class="form-control" />
            <span asp-validation-for="Date" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Venue" class="form-label"></label>
            <input asp-for="Venue" class="form-control" placeholder="Enter venue" />
            <span asp-validation-for="Venue" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label">Winner Team (optional)</label>
            <select asp-for="WinnerTeamId" class="form-select"
                    asp-items="@(new SelectList(ViewData["Teams"] as List<CricbuzzAppV2.Models.Team>, "TeamId", "TeamName"))">
                <option value="">-- Select Winner --</option>
            </select>
            <span asp-validation-for="WinnerTeamId" class="text-danger"></span>
        </div>

        <div class="d-flex gap-2">
            <button type="submit" class="btn btn-success">💾 Save</button>
            <a asp-action="Index" class="btn btn-secondary">↩ Back to List</a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
