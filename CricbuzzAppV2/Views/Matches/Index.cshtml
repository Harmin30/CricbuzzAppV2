@model IEnumerable<CricbuzzAppV2.Models.Match>

@{
    ViewData["Title"] = "Matches";
    Layout = "_Layout";
}

<!-- Header -->
<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="fw-semibold">Matches</h2>

    <a asp-action="Create" class="btn btn-success">
        <i class="fa-solid fa-plus me-1"></i> Add Match
    </a>
</div>


    <!-- Compact Search Bar -->
    <div class="d-flex align-items-center gap-2 mb-2">

        <!-- Search -->
        <div class="flex-grow-1">
            <div class="input-group shadow-sm">
                <span class="input-group-text bg-white">
                    <i class="fa-solid fa-magnifying-glass text-muted"></i>
                </span>

                <input type="text"
                       id="searchInput"
                       class="form-control"
                       placeholder="Search matches..." />
            </div>
        </div>

        <!-- Mobile Filter Button -->
        <button class="btn btn-outline-secondary shadow-sm d-md-none"
                type="button"
                data-bs-toggle="offcanvas"
                data-bs-target="#filterCanvas">
            <i class="fa-solid fa-filter"></i>
        </button>

    </div>

    <!-- Desktop Filter -->
    <div class="d-none d-md-flex justify-content-end mb-3">
        <div class="d-flex gap-2 align-items-center">

            <span class="text-muted small">Filter:</span>

            <select id="desktopMatchTypeFilter"
                    class="form-select form-select-sm"
                    style="width:140px;">
                <option value="">All</option>
                <option value="Test">Test</option>
                <option value="ODI">ODI</option>
                <option value="T20">T20</option>
            </select>

            <button id="desktopClearFilters"
                    class="btn btn-outline-secondary btn-sm">
                Clear
            </button>

        </div>
    </div>




<!-- Alerts -->
@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @Html.Raw(TempData["Success"])
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @Html.Raw(TempData["Error"])
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<!-- Unified Selection Bar -->
<div id="selectionBar"
     class="mb-2 d-flex justify-content-between align-items-center">

    <div class="form-check">
        <input class="form-check-input"
               type="checkbox"
               id="unifiedSelectAll">

        <label class="form-check-label fw-semibold small"
               for="unifiedSelectAll">
            Select all
        </label>
    </div>

    <span class="text-muted small">
        Click rows or tap cards to select
    </span>

</div>


<!-- Bulk Delete Form -->
<form asp-action="DeleteSelected" method="post" id="bulkDeleteForm">

    <div class="table-responsive d-none d-md-block">
        <table class="table table-hover table-bordered align-middle shadow-sm">
            <thead class="table-dark">
                <tr>
                    <th style="width:40px;"></th> <!-- checkbox column -->
                    <th>Team A</th>
                    <th>Team B</th>
                    <th>Match Type</th>
                    <th>Date</th>
                    <th>Venue</th>
                    <th>Winner</th>
                    <th class="text-center" style="width:160px;">Actions</th>
                </tr>
            </thead>


            <tbody>
                @foreach (var match in Model)
                {
                    <tr class="match-row selectable"
                        data-id="@match.MatchId"
                        data-teama="@match.TeamA?.TeamName"
                        data-teamb="@match.TeamB?.TeamName"
                        data-venue="@match.Venue"
                        data-type="@match.MatchType">

                        <!-- ✅ Checkbox must be inside TD -->
                        <td>
                            <input type="checkbox"
                                   class="form-check-input row-checkbox"
                                   name="selectedIds"
                                   value="@match.MatchId"
                                   onclick="event.stopPropagation()" />
                        </td>


                        <td class="fw-semibold">@match.TeamA?.TeamName</td>
                        <td class="fw-semibold">@match.TeamB?.TeamName</td>
                        <td>@match.MatchType</td>
                        <td>@match.Date.ToString("dd MMM yyyy")</td>
                        <td>@match.Venue</td>
                        <td>@(match.WinnerTeam?.TeamName ?? "—")</td>

                        <td class="text-center">
                            <div class="btn-group" role="group">
                                <a asp-action="Details" asp-route-id="@match.MatchId"
                                   class="btn btn-outline-info btn-sm">
                                    <i class="fa-solid fa-eye"></i>
                                </a>
                                <a asp-action="Edit" asp-route-id="@match.MatchId"
                                   class="btn btn-outline-warning btn-sm">
                                    <i class="fa-solid fa-pen-to-square"></i>
                                </a>
                                <a asp-action="Delete" asp-route-id="@match.MatchId"
                                   class="btn btn-outline-danger btn-sm">
                                    <i class="fa-solid fa-trash"></i>
                                </a>
                            </div>
                        </td>
                    </tr>

                }
            </tbody>
        </table>
    </div>

    <!-- Mobile View (No Horizontal Scroll) -->
    <div class="d-md-none">
        @foreach (var match in Model)
        {
            <div class="card shadow-sm mb-3 match-card selectable"
                 data-id="@match.MatchId"
                 data-teama="@match.TeamA?.TeamName"
                 data-teamb="@match.TeamB?.TeamName"
                 data-venue="@match.Venue"
                 data-type="@match.MatchType">



                <div class="card-body">

                    <div class="d-flex justify-content-between align-items-center mb-2">
                        <div class="fw-semibold">
                            @match.TeamA?.TeamName
                            <span class="text-muted">vs</span>
                            @match.TeamB?.TeamName
                        </div>
                        <input type="checkbox"
                               class="form-check-input row-checkbox"
                               name="selectedIds"
                               value="@match.MatchId"
                               onclick="event.stopPropagation()" />


                    </div>

                    <div class="small text-muted mb-1">
                        <strong>Type:</strong> @match.MatchType
                    </div>

                    <div class="small text-muted mb-1">
                        <strong>Date:</strong> @match.Date.ToString("dd MMM yyyy")
                    </div>

                    <div class="small text-muted mb-1">
                        <strong>Venue:</strong> @match.Venue
                    </div>

                    <div class="small text-muted mb-2">
                        <strong>Winner:</strong>
                        @(match.WinnerTeam?.TeamName ?? "—")
                    </div>

                    <div class="d-flex gap-2">
                        <a asp-action="Details"
                           asp-route-id="@match.MatchId"
                           class="btn btn-outline-info btn-sm w-100">
                            <i class="fa-solid fa-eye me-1"></i> View
                        </a>

                        <a asp-action="Edit"
                           asp-route-id="@match.MatchId"
                           class="btn btn-outline-warning btn-sm w-100">
                            <i class="fa-solid fa-pen-to-square me-1"></i> Edit
                        </a>

                        <a asp-action="Delete"
                           asp-route-id="@match.MatchId"
                           class="btn btn-outline-danger btn-sm w-100">
                            <i class="fa-solid fa-trash me-1"></i> Delete
                        </a>
                    </div>

                </div>
            </div>
        }
    </div>



    <!-- Bulk Delete Confirmation Modal -->
    <div class="modal fade" id="bulkDeleteModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">

                <div class="modal-header bg-danger text-white">
                    <h5 class="modal-title">
                        <i class="fa-solid fa-triangle-exclamation me-2"></i>
                        Confirm Deletion
                    </h5>
                    <button type="button"
                            class="btn-close btn-close-white"
                            data-bs-dismiss="modal"></button>
                </div>

                <div class="modal-body">
                    <p class="mb-1">
                        Are you sure you want to delete the selected match(es)?
                    </p>
                    <p class="text-muted mb-0">
                        This action <strong>cannot be undone</strong>.
                    </p>
                </div>

                <div class="modal-footer">
                    <button type="button"
                            class="btn btn-secondary"
                            data-bs-dismiss="modal">
                        Cancel
                    </button>

                    <button type="button"
                            id="confirmBulkDelete"
                            class="btn btn-danger">
                        <i class="fa-solid fa-trash me-1"></i> Delete
                    </button>
                </div>

            </div>
        </div>
    </div>

    <!-- Sticky Bulk Action Bar -->
    <div id="bulkActionBar"
         class="position-fixed bottom-0 start-0 w-100 bg-white border-top shadow-lg py-2 px-3"
         style="display:none; z-index:1050;">

        <div class="container-fluid d-flex justify-content-between align-items-center">

            <span class="fw-semibold text-muted">
                <span id="selectedCount">0</span> match(es) selected
            </span>

            <button type="submit" class="btn btn-danger">
                <i class="fa-solid fa-trash me-1"></i> Delete Selected
            </button>

        </div>
    </div>


</form>

<!-- Filter Offcanvas -->
    <!-- Filter Offcanvas (Mobile Only) -->
    <div class="offcanvas offcanvas-bottom d-md-none"
         tabindex="-1"
         id="filterCanvas"
         style="height:220px;">

        <div class="offcanvas-header border-bottom">
            <h6 class="offcanvas-title">
                <i class="fa-solid fa-filter me-1"></i> Filters
            </h6>

            <button type="button"
                    class="btn-close"
                    data-bs-dismiss="offcanvas"></button>
        </div>

        <div class="offcanvas-body">

            <div class="mb-3">
                <label class="form-label fw-semibold small">
                    Match Type
                </label>
                <select id="mobileMatchTypeFilter" class="form-select">
                    <option value="">All Types</option>
                    <option value="Test">Test</option>
                    <option value="ODI">ODI</option>
                    <option value="T20">T20</option>
                </select>
            </div>

            <div class="d-flex gap-2">
                <button id="mobileClearFilters"
                        class="btn btn-outline-secondary w-100">
                    Clear
                </button>

                <button class="btn btn-primary w-100"
                        data-bs-dismiss="offcanvas">
                    Apply
                </button>
            </div>

        </div>
    </div>

@section Scripts {
    <script>
        const bulkForm = document.getElementById("bulkDeleteForm");
        const selectAll = document.getElementById("unifiedSelectAll");

        const actionBar = document.getElementById("bulkActionBar");
        const selectedCountEl = document.getElementById("selectedCount");

        const modalElement = document.getElementById("bulkDeleteModal");
        const confirmBtn = document.getElementById("confirmBulkDelete");
        const modal = new bootstrap.Modal(modalElement);

        /* -----------------------------
           BULK SELECTION CORE LOGIC
        ------------------------------*/

        function getCheckboxes() {
            return document.querySelectorAll(".row-checkbox");
        }

        function getChecked() {
            return document.querySelectorAll(".row-checkbox:checked");
        }

        function updateBulkBar() {
            const count = getChecked().length;
            selectedCountEl.textContent = count;
            actionBar.style.display = count > 0 ? "block" : "none";
        }

        function syncSelectAll() {
            if (!selectAll) return;

            const all = getCheckboxes().length;
            const checked = getChecked().length;

            selectAll.checked = all > 0 && all === checked;
        }

        /* -----------------------------
           SELECT ALL TOGGLE
        ------------------------------*/
        selectAll?.addEventListener("change", function () {
            const checked = this.checked;

            getCheckboxes().forEach(cb => cb.checked = checked);
            document.querySelectorAll(".selectable")
                .forEach(el => el.classList.toggle("table-active", checked));

            updateBulkBar();
        });

        /* -----------------------------
           ROW / CARD CLICK SELECTION
        ------------------------------*/
           document.querySelectorAll(".selectable")
        .forEach(el => {
            el.addEventListener("click", function (e) {

                // Ignore clicks on interactive elements
                if (
                    e.target.closest("a") ||
                    e.target.closest("button") ||
                    e.target.closest("input[type='checkbox']")
                ) return;

                const checkbox = this.querySelector(".row-checkbox");
                checkbox.checked = !checkbox.checked;

                this.classList.toggle("table-active", checkbox.checked);

                updateBulkBar();
                syncSelectAll();
            });
        });


        /* -----------------------------
           DIRECT CHECKBOX CHANGE
        ------------------------------*/
        document.addEventListener("change", function (e) {
            if (e.target.classList.contains("row-checkbox")) {
                e.target.closest(".selectable")
                    ?.classList.toggle("table-active", e.target.checked);

                updateBulkBar();
                syncSelectAll();
            }
        });

        /* -----------------------------
           DELETE CONFIRMATION
        ------------------------------*/
        bulkForm.addEventListener("submit", function (e) {
            e.preventDefault();
            if (getChecked().length === 0) return;
            modal.show();
        });

        confirmBtn.addEventListener("click", function () {
            modal.hide();
            bulkForm.submit();
        });

        /* -----------------------------
           SEARCH & FILTER (UNCHANGED)
        ------------------------------*/
        const searchInput = document.getElementById("searchInput");
        const desktopType = document.getElementById("desktopMatchTypeFilter");
        const mobileType = document.getElementById("mobileMatchTypeFilter");
        const desktopClear = document.getElementById("desktopClearFilters");
        const mobileClear = document.getElementById("mobileClearFilters");

        function getSelectedType() {
            return (desktopType?.value || mobileType?.value || "").toLowerCase();
        }

        function applyFilters() {
            const query = searchInput.value.toLowerCase();
            const type = getSelectedType();

            document.querySelectorAll(".match-row, .match-card")
                .forEach(item => {
                    const a = item.dataset.teama?.toLowerCase() || "";
                    const b = item.dataset.teamb?.toLowerCase() || "";
                    const v = item.dataset.venue?.toLowerCase() || "";
                    const t = item.dataset.type?.toLowerCase() || "";

                    const matchesSearch =
                        a.includes(query) ||
                        b.includes(query) ||
                        v.includes(query);

                    const matchesType = !type || t === type;

                    item.style.display =
                        (matchesSearch && matchesType) ? "" : "none";
                });
        }

        searchInput?.addEventListener("input", applyFilters);
        desktopType?.addEventListener("change", applyFilters);
        mobileType?.addEventListener("change", applyFilters);

        desktopClear?.addEventListener("click", () => {
            searchInput.value = "";
            desktopType.value = "";
            mobileType.value = "";
            applyFilters();
        });

        mobileClear?.addEventListener("click", () => {
            searchInput.value = "";
            desktopType.value = "";
            mobileType.value = "";
            applyFilters();
        });
    </script>
}

