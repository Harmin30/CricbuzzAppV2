@model IEnumerable<CricbuzzAppV2.Models.Match>

@{
    ViewData["Title"] = "Matches List";
    Layout = "_Layout";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="mb-0">Matches</h2>
    <a asp-action="Create" class="btn btn-success">➕ Add Match</a>
</div>

<table class="table table-striped table-bordered shadow-sm">
    <thead class="table-dark">
        <tr>
            <th>Team A</th>
            <th>Team B</th>
            <th>Match Type</th>
            <th>Date</th>
            <th>Venue</th>
            <th>Winner</th>
            <th style="width: 220px;">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var match in Model)
        {
            <tr>
                <td>@match.TeamA?.TeamName</td>
                <td>@match.TeamB?.TeamName</td>
                <td>@match.MatchType</td>
                <td>@match.Date.ToShortDateString()</td>
                <td>@match.Venue</td>
                <td>@(match.WinnerTeam?.TeamName ?? "")</td>   <!-- ✅ No "N/A" -->
                <td>
                    <div class="d-flex gap-2">
                        <a asp-action="Details" asp-route-id="@match.MatchId" class="btn btn-info btn-sm"> View</a>
                        <a asp-action="Edit" asp-route-id="@match.MatchId" class="btn btn-warning btn-sm"> Edit</a>
                        <a asp-action="Delete" asp-route-id="@match.MatchId" class="btn btn-danger btn-sm"> Delete</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
