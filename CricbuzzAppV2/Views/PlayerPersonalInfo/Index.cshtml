@model IEnumerable<CricbuzzAppV2.Models.PlayerPersonalInfo>
@{
    ViewData["Title"] = "Player Personal Info";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="mb-4">📋 Player Personal Info</h2>
    <a asp-action="Create" class="btn btn-success mt-3">➕ Add New Player Info</a>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["ErrorMessages"] is List<string> errorMessages)
{
    <div class="alert alert-danger">
        <ul class="mb-0">
            @foreach (var msg in errorMessages)
            {
                <li>@msg</li>
            }
        </ul>
    </div>
}

<form asp-action="DeleteSelected" method="post">
    <table class="table table-striped table-hover table-bordered table-sm">
        <thead class="table-dark">
            <tr>
                <th><input type="checkbox" id="selectAll" /></th>
                <th>Player</th>
                <th>Date of Birth</th>
                <th>Birth Place</th>
                <th>Height</th>
                <th>Batting Style</th>
                <th>Bowling Style</th>
                <th>Role</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var info in Model)
            {
                <tr>
                    <td><input type="checkbox" name="selectedIds" value="@info.PlayerPersonalInfoId" /></td>
                    <td>@info.Player.FullName</td>
                    <td>@info.DateOfBirth.ToShortDateString()</td>
                    <td>@info.BirthPlace</td>
                    <td>@info.Height</td>
                    <td>@info.BattingStyle</td>
                    <td>@info.BowlingStyle</td>
                    <td>@info.Role</td>
                    <td>
                        <div class="d-flex gap-2">
                            <a asp-action="Details" asp-route-id="@info.PlayerPersonalInfoId" class="btn btn-info btn-sm">View</a>
                            <a asp-action="Edit" asp-route-id="@info.PlayerPersonalInfoId" class="btn btn-warning btn-sm">Edit</a>
                            <a asp-action="Delete" asp-route-id="@info.PlayerPersonalInfoId" class="btn btn-danger btn-sm">Delete</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <button type="submit" class="btn btn-danger mt-2">🗑 Delete Selected</button>
</form>

@section Scripts {
    <script>
        document.getElementById("selectAll").addEventListener("change", function () {
            const checkboxes = document.querySelectorAll("input[name='selectedIds']");
            checkboxes.forEach(cb => cb.checked = this.checked);
        });
    </script>
}
