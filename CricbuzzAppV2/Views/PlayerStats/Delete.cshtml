@model CricbuzzAppV2.Models.PlayerStats

@{
    ViewData["Title"] = "Delete Player Stats";
}

<h2 class="mb-4 text-danger">⚠️ Confirm Delete</h2>

<div class="alert alert-warning">
    Are you sure you want to delete stats for
    <strong>@Model.Player.FullName (@Model.Format)</strong>?
</div>

<div class="card shadow-sm p-4">
    <h4>Quick Info</h4>
    <ul>
        <li><b>Matches:</b> @Model.MatchesPlayed</li>
        <li><b>Runs:</b> @Model.Runs</li>
        <li><b>Wickets:</b> @Model.Wickets</li>
    </ul>
</div>
<form asp-action="DeleteConfirmed" asp-route-id="@Model.PlayerStatsId" method="post" class="mt-3">
    @Html.AntiForgeryToken()
    <button type="submit" class="btn btn-danger me-2">🗑 Confirm Delete</button>
    <a asp-action="Index" class="btn btn-secondary">⬅️ Cancel</a>
</form>
