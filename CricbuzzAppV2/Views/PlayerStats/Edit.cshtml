@model CricbuzzAppV2.Models.PlayerStats

@{
    ViewData["Title"] = "Edit Player Stats";
}

<h2>✏ Edit Player Stats</h2>

<div class="card shadow-sm p-4">
    <form asp-action="Edit" method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="PlayerStatsId" />

        <div class="mb-3">
            <label asp-for="PlayerId" class="form-label">Player</label>
            <select asp-for="PlayerId" class="form-select" asp-items="@(ViewData["Players"] as SelectList)">
                <option value="">-- Select Player --</option>
            </select>
            <span asp-validation-for="PlayerId" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Format" class="form-label">Format</label>
            <select asp-for="Format" class="form-select" asp-items="@(ViewData["Formats"] as SelectList)"></select>
            <span asp-validation-for="Format" class="text-danger"></span>
        </div>

        <h5>🏏 Batting Stats (Optional)</h5>
        <div class="row">
            <div class="col-md-2 mb-3"><label asp-for="MatchesPlayed">Matches</label><input asp-for="MatchesPlayed" class="form-control" /></div>
            <div class="col-md-2 mb-3"><label asp-for="Innings">Innings</label><input asp-for="Innings" class="form-control" /></div>
            <div class="col-md-2 mb-3"><label asp-for="Runs">Runs</label><input asp-for="Runs" class="form-control" /></div>
            <div class="col-md-2 mb-3"><label asp-for="BallsFaced">BF</label><input asp-for="BallsFaced" class="form-control" /></div>
            <div class="col-md-2 mb-3"><label asp-for="HighestScore">HS</label><input asp-for="HighestScore" class="form-control" /></div>
            <div class="col-md-1 mb-3"><label asp-for="Hundreds">100s</label><input asp-for="Hundreds" class="form-control" /></div>
            <div class="col-md-1 mb-3"><label asp-for="Fifties">50s</label><input asp-for="Fifties" class="form-control" /></div>
            <div class="col-md-1 mb-3"><label asp-for="DoubleHundreds">200s</label><input asp-for="DoubleHundreds" class="form-control" /></div>
        </div>

        <h5>🎯 Bowling Stats (Optional)</h5>
        <div class="row">
            <div class="col-md-3 mb-3"><label asp-for="BallsBowled">Balls Bowled</label><input asp-for="BallsBowled" class="form-control" /></div>
            <div class="col-md-3 mb-3"><label asp-for="RunsConceded">Runs Conceded</label><input asp-for="RunsConceded" class="form-control" /></div>
            <div class="col-md-3 mb-3"><label asp-for="Wickets">Wickets</label><input asp-for="Wickets" class="form-control" /></div>
            <div class="col-md-3 mb-3"><label asp-for="BestBowling">Best Bowling</label><input asp-for="BestBowling" class="form-control" /></div>
        </div>

        <div class="d-flex gap-2 mt-3">
            <button type="submit" class="btn btn-success">💾 Save Changes</button>
            <a asp-action="Index" class="btn btn-secondary">↩ Back</a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
