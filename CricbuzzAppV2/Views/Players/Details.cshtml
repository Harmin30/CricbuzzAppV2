@model CricbuzzAppV2.Models.Player

@{
    ViewData["Title"] = "Player Details";
}

<h2 class="mb-4 text-center">
    <i class="fa-solid fa-eye me-2"></i>Player Details
</h2>

<div class="card shadow-sm mx-auto p-4"
     style="max-width:650px;border-radius:16px;">

    <!-- Player Image -->
    <div class="text-center mb-4">
        <img src="@(string.IsNullOrEmpty(Model.ImageUrl)
                         ? "https://static.vecteezy.com/system/resources/previews/036/280/651/original/default-avatar-profile-icon-social-media-user-image-gray-avatar-icon-blank-profile-silhouette-illustration-vector.jpg"
                         : Model.ImageUrl)"
             class="rounded-circle border shadow-sm"
             style="width:140px;height:140px;object-fit:cover;" />
    </div>

    <!-- Player Info -->
    <div class="row mb-2">
        <div class="col-sm-4 text-muted fw-semibold">Full Name</div>
        <div class="col-sm-8">@Model.FullName</div>
    </div>

    <hr />

    <div class="row mb-2">
        <div class="col-sm-4 text-muted fw-semibold">Role</div>
        <div class="col-sm-8">@Model.Role</div>
    </div>

    <hr />

    <div class="row mb-2">
        <div class="col-sm-4 text-muted fw-semibold">Team</div>
        <div class="col-sm-8">@Model.Team?.TeamName</div>
    </div>

    <!-- Actions -->
    <div class="d-flex justify-content-center gap-3 mt-4">
        <a asp-action="Edit"
           asp-route-id="@Model.PlayerId"
           class="btn btn-outline-primary px-4">
            Edit
        </a>

        <a asp-action="Index"
           class="btn btn-outline-secondary px-4">
            Back to List
        </a>
    </div>
</div>
