@model IEnumerable<CricbuzzAppV2.Models.Player>

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="fw-semibold">Players</h2>
    <a asp-action="Create" class="btn btn-success">
        <i class="fa-solid fa-plus me-1"></i>Add Player
    </a>
</div>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show">
        @Html.Raw(TempData["Success"])
        <button class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<form asp-action="DeleteSelected" method="post" id="bulkDeleteForm">

    <div class="table-responsive">
    <table class="table table-hover table-bordered align-middle shadow-sm">
        <thead class="table-dark">
            <tr>
                <th style="width:40px;">
                    <input type="checkbox" id="selectAll" />
                </th>
                <th>Image</th>
                <th>Name</th>
                <th>Role</th>
                <th>Team</th>
                <th class="text-center" style="width:160px;">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var p in Model)
            {
                <tr>
                    <td>
                        <input type="checkbox" name="selectedIds" value="@p.PlayerId" />
                    </td>
                    <td>
                        <img src="@(string.IsNullOrEmpty(p.ImageUrl)
                                  ? "https://static.vecteezy.com/system/resources/previews/036/280/651/original/default-avatar-profile-icon-social-media-user-image-gray-avatar-icon-blank-profile-silhouette-illustration-vector.jpg"
                                  : p.ImageUrl)"
                         class="rounded-circle border"
                         style="width:45px;height:45px;object-fit:cover;" />

                    </td>
                    <td class="fw-semibold">@p.FullName</td>
                    <td>@p.Role</td>
                    <td>@p.Team?.TeamName</td>
                    <td class="text-center">
                        <div class="btn-group">
                            <a asp-action="Details" asp-route-id="@p.PlayerId"
                               class="btn btn-outline-info btn-sm">
                                <i class="fa-solid fa-eye"></i>
                            </a>
                            <a asp-action="Edit" asp-route-id="@p.PlayerId"
                               class="btn btn-outline-warning btn-sm">
                                <i class="fa-solid fa-pen-to-square"></i>
                            </a>
                            <a asp-action="Delete" asp-route-id="@p.PlayerId"
                               class="btn btn-outline-danger btn-sm">
                                <i class="fa-solid fa-trash"></i>
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    </div>

    <button type="submit" class="btn btn-danger mt-2">
        <i class="fa-solid fa-trash me-1"></i>Delete Selected
    </button>

    <!-- Bulk Delete Players Confirmation Modal -->
    <div class="modal fade" id="bulkDeleteModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">

                <div class="modal-header bg-danger text-white">
                    <h5 class="modal-title">
                        <i class="fa-solid fa-triangle-exclamation me-2"></i>
                        Confirm Player Deletion
                    </h5>
                    <button type="button"
                            class="btn-close btn-close-white"
                            data-bs-dismiss="modal"></button>
                </div>

                <div class="modal-body">
                    <p class="mb-1">
                        Are you sure you want to delete the selected player(s)?
                    </p>
                    <p class="text-muted mb-0">
                        This action <strong>cannot be undone</strong>.
                    </p>
                </div>

                <div class="modal-footer">
                    <button type="button"
                            class="btn btn-secondary"
                            data-bs-dismiss="modal">
                        Cancel
                    </button>

                    <button type="button"
                            id="confirmBulkDelete"
                            class="btn btn-danger">
                        <i class="fa-solid fa-trash me-1"></i> Delete
                    </button>
                </div>

            </div>
        </div>
    </div>


</form>

@section Scripts {
    <script>
        const bulkForm = document.getElementById("bulkDeleteForm");
        const selectAll = document.getElementById("selectAll");
        const modalElement = document.getElementById("bulkDeleteModal");
        const confirmBtn = document.getElementById("confirmBulkDelete");

        const modal = new bootstrap.Modal(modalElement);

        // Select All checkbox
        selectAll.addEventListener("change", function () {
            document.querySelectorAll("input[name='selectedIds']")
                .forEach(cb => cb.checked = this.checked);
        });

        // Intercept bulk delete submit
        bulkForm.addEventListener("submit", function (e) {
            e.preventDefault();

            const selected = document.querySelectorAll("input[name='selectedIds']:checked");

            if (selected.length === 0) {
                alert("⚠️ Please select at least one player to delete.");
                return;
            }

            modal.show();
        });

        // Confirm delete
        confirmBtn.addEventListener("click", function () {
            modal.hide();
            bulkForm.submit();
        });
    </script>
}

