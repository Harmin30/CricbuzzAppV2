@model CricbuzzAppV2.Models.Scorecard

@{
    ViewData["Title"] = "Delete Scorecard";
    Layout = "_Layout";
}

<h2>Delete Scorecard</h2>

<h4>Are you sure you want to delete this scorecard?</h4>
<hr />

<dl class="row">
    <dt class="col-sm-2">Match</dt>
    <dd class="col-sm-10">@Model.Match?.DisplayName</dd>

    <dt class="col-sm-2">Player</dt>
    <dd class="col-sm-10">@Model.Player?.FullName</dd>

    <dt class="col-sm-2">Runs Scored</dt>
    <dd class="col-sm-10">@Model.RunsScored</dd>

    <dt class="col-sm-2">Wickets Taken</dt>
    <dd class="col-sm-10">@Model.WicketsTaken</dd>
</dl>

<form asp-action="Delete">
    @* Hidden field ensures ScorecardId is posted *@
    <input type="hidden" asp-for="ScorecardId" />

    <button type="submit" class="btn btn-danger">🗑 Delete</button>
    <a asp-action="Index" class="btn btn-secondary">↩ Back to List</a>
</form>
