@model CricbuzzAppV2.Models.Scorecard

@{
    ViewData["Title"] = "Delete Scorecard";
}

<h2>🗑 Delete Scorecard</h2>

<div class="card shadow-sm p-4">
    <h5>Are you sure you want to delete this scorecard?</h5>

    <dl class="row mt-3">
        <dt class="col-sm-2">Match</dt>
        <dd class="col-sm-10">@Model.Match?.TeamA?.TeamName vs @Model.Match?.TeamB?.TeamName</dd>

        <dt class="col-sm-2">Player</dt>
        <dd class="col-sm-10">@Model.Player?.FullName</dd>

        <dt class="col-sm-2">Runs Scored</dt>
        <dd class="col-sm-10">@Model.RunsScored</dd>

        <dt class="col-sm-2">Balls Faced</dt>

        <dd class="col-sm-10">@Model.BallsFaced</dd>

        <dt class="col-sm-2">Wickets Taken</dt>
        <dd class="col-sm-10">@Model.WicketsTaken</dd>

        <dt class="col-sm-2">Runs Conceded</dt>
        <dd class="col-sm-10">@Model.RunsConceded</dd>

        <dt class="col-sm-2">Overs Bowled</dt>
        <dd class="col-sm-10">@Model.OversBowled</dd>

        <dt class="col-sm-2">How Out</dt>
        <dd class="col-sm-10">@Model.HowOut ?? "-"</dd>
    </dl>

    <form asp-action="DeleteConfirmed" method="post">
        <input type="hidden" name="id" value="@Model.ScorecardId" />
        <button type="submit" class="btn btn-danger">🗑 Delete</button>
        <a asp-action="Index" class="btn btn-secondary">↩ Back to List</a>
    </form>
</div>
