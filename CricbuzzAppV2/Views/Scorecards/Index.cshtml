@model IEnumerable<CricbuzzAppV2.Models.Scorecard>

@{
    ViewData["Title"] = "Scorecards";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>📋 Scorecards</h2>
    <a asp-action="Create" class="btn btn-success mb-3">➕ Add Scorecard</a>
</div>

<!-- Alerts -->
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["ErrorMessages"] is List<string> errorMessages)
{
    <div class="alert alert-danger">
        <ul class="mb-0">
            @foreach (var msg in errorMessages)
            {
                <li>@msg</li>
            }
        </ul>
    </div>
}

<form asp-action="DeleteSelected" method="post">
    <table class="table table-bordered table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th><input type="checkbox" id="selectAll" /></th>
                <th>Match</th>
                <th>Match Type</th>
                <th>Player</th>
                <th colspan="7" class="text-center">Batting</th>
                <th colspan="4" class="text-center">Bowling</th>
                <th>How Out</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (var score in Model)
                {
                    <tr>
                        <td><input type="checkbox" name="selectedIds" value="@score.ScorecardId" /></td>
                        <td>@score.Match?.TeamA?.TeamName vs @score.Match?.TeamB?.TeamName</td>
                        <td>@score.Match?.MatchType</td>
                        <td>@score.Player?.FullName</td>

                        <!-- Batting -->
                        <td>@(score.RunsScored != 0 ? score.RunsScored : "-")</td>
                        <td>@(score.BallsFaced != 0 ? score.BallsFaced : "-")</td>
                        <td>@(score.Fours != 0 ? score.Fours : "-")</td>
                        <td>@(score.Sixes != 0 ? score.Sixes : "-")</td>
                        <td>@(score.Ones != 0 ? score.Ones : "-")</td>
                        <td>@(score.Twos != 0 ? score.Twos : "-")</td>
                        <td>@(score.Threes != 0 ? score.Threes : "-")</td>

                        <!-- Bowling -->
                        <td>@(score.OversBowled != 0 ? string.Format("{0:0.0}", score.OversBowled) : "-")</td>
                        <td>@(score.RunsConceded != 0 ? score.RunsConceded : "-")</td>
                        <td>@(score.WicketsTaken != 0 ? score.WicketsTaken : "-")</td>
                        <td>@(score.Maidens != 0 ? score.Maidens : "-")</td>

                        <td>@(string.IsNullOrEmpty(score.HowOut) ? "-" : score.HowOut)</td>

                        <td>
                            <div class="d-flex gap-2">
                                <a asp-action="Details" asp-route-id="@score.ScorecardId" class="btn btn-sm btn-info">View</a>
                                <a asp-action="Edit" asp-route-id="@score.ScorecardId" class="btn btn-sm btn-warning">Edit</a>
                                <a asp-action="Delete" asp-route-id="@score.ScorecardId" class="btn btn-sm btn-danger">Delete</a>
                            </div>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="17" class="text-center">No scorecards found.</td>
                </tr>
            }
        </tbody>
    </table>

    <button type="submit" class="btn btn-danger mt-2">🗑 Delete Selected</button>
</form>

@section Scripts {
    <script>
        document.getElementById("selectAll").addEventListener("change", function () {
            const checkboxes = document.querySelectorAll("input[name='selectedIds']");
            checkboxes.forEach(cb => cb.checked = this.checked);
        });
    </script>
}
