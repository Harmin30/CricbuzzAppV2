<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CricbuzzAppV2</title>

    <!-- CSS Dependencies -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>

<body>
    <!-- Enhanced Navigation Bar -->
    <nav class="navbar navbar-expand-lg navbar-dark navbar-custom">
        <div class="container">
            <a class="navbar-brand" href="/">
                <i class="bi bi-cricket"></i>
                CricbuzzAppV2
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">
                @if (Context.Session.GetString("Username") != null)
                {
                var username = Context.Session.GetString("Username");
                var role = Context.Session.GetString("Role");

                    <!-- Main links visible to all logged-in users -->
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Players" asp-action="Index">Players</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Teams" asp-action="Index">Teams</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Matches" asp-action="Index">Matches</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Scorecards" asp-action="Index">Scorecards</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="PlayerStats" asp-action="Index">Player Stats</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="PlayerPersonalInfo" asp-action="Index">Player Personal Info</a>
                        </li>

                        <!-- SuperAdmin-only link -->
                        @if (role == "SuperAdmin")
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Users" asp-action="Index">Manage Users</a>
                            </li>
                        }
                    </ul>

                <!-- User Profile & Logout -->
                <ul class="navbar-nav align-items-center">
                    <li class="nav-item">
                        <div class="user-profile">
                            <i class="bi bi-person-circle"></i>
                            <span class="fw-bold">@username (@role)</span>
                        </div>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Account" asp-action="Logout">
                            <i class="bi bi-box-arrow-right"></i>Logout
                        </a>
                    </li>
                </ul>
                }
                else
                {
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Account" asp-action="Login">
                            <i class="bi bi-box-arrow-in-right"></i>Login
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Account" asp-action="Register">
                            <i class="bi bi-person-plus"></i>Register
                        </a>
                    </li>
                </ul>
                }
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <div class="container mt-4">
        @RenderBody()
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>