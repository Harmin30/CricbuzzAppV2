<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CricbuzzAppV2</title>

    <!-- CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet" />
    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"
          crossorigin="anonymous" />



    <style>
        /* =====================
           NAVBAR BASE
        ===================== */
        .navbar-custom {
            background: linear-gradient(135deg, #1a4731 0%, #2d6a4f 50%, #40916c 100%);
            padding: 1rem 0;
            box-shadow: 0 2px 15px rgba(0, 0, 0, 0.1);

        }

        .navbar-custom {
            background: linear-gradient(135deg, #1a4731, #2d6a4f, #40916c);
            min-height: 76px;
            display: flex;
            align-items: center;
            box-shadow: 0 2px 15px rgba(0,0,0,.1);

        }

        .navbar-custom {
            min-height: 76px;
            display: flex;
            align-items: center;
            box-shadow: 0 2px 15px rgba(0,0,0,.1);
        }

            .navbar-custom > .container {
                align-items: center;
            }

        .nav-link:hover {
            background: rgba(255,255,255,.1);
        }

       @@media (max-width: 1200px) and (min-width: 992px) {
            /* allow navbar to grow */
            .navbar-custom

        {
            padding-top: 0.75rem;
            padding-bottom: 0.75rem;
        }

        /* fix right side cutting */
        .navbar-nav.align-items-center {
            flex-direction: column;
            align-items: flex-end;
            gap: 6px;
        }

        .user-profile {
            margin-right: 0;
        }

        .nav-link,
        .user-profile {
            line-height: 1.2;
        }


        }

       


        .navbar-brand {
            font-size: 1.4rem;
            font-weight: 700;
            color: #fff !important;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

            .navbar-brand i {
                color: #ffd700;
            }

        /* =====================
           CENTER NAV (DESKTOP)
        ===================== */
        .navbar-center {
            display: flex;
            gap: 0.4rem;
        }

        /* Nav links */
        .nav-link {
            color: rgba(255,255,255,0.9) !important;
            font-weight: 500;
            padding: 0.5rem 1rem;
            border-radius: 30px;
            display: flex;
            align-items: center;
            transition: background 0.25s ease;
        }

            .nav-link i {
                margin-right: 0.4rem;
            }

            .nav-link:hover,
            .nav-link.active {
                background: rgba(255,255,255,0.2);
            }

        /* =====================
           USER AREA
        ===================== */
        .navbar-user {
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        .user-profile {
            display: flex;
            align-items: center;
            gap: 0.4rem;
            background: rgba(255,255,255,0.15);
            padding: 0.4rem 0.8rem;
            border-radius: 30px;
            color: #fff;
            white-space: nowrap;
        }

        /* =====================
           DROPDOWN
        ===================== */
        .dropdown-menu {
            border-radius: 12px;
            padding: 0.4rem;
        }

        .dropdown-item {
            border-radius: 8px;
            font-weight: 500;
        }

            .dropdown-item.active {
                background: rgba(255,255,255,0.2);
            }

        /* =====================
           COLLAPSE (TABLET + MOBILE ≤ 991px)
        ===================== */
        @@media (max-width: 991px) {
            .navbar-collapse

        {
            background: linear-gradient(135deg, #1a4731, #2d6a4f, #40916c);
            padding: 0.75rem;
        }

        /* Stack center nav */
        .navbar-center {
            flex-direction: column;
            width: 100%;
            margin-top: 0.5rem;
        }

        .navbar-nav .nav-link {
            width: 100%;
            justify-content: flex-start;
            padding: 0.6rem 0.8rem;
            border-radius: 8px;
            font-size: 0.95rem;
        }

        /* Dropdown behaves like list */
        .dropdown-menu {
            position: static;
            width: 100%;
            background: rgba(0,0,0,0.15);
            box-shadow: none;
            margin-top: 0.25rem;
        }

        /* User section separation */
        .navbar-user {
            flex-direction: column;
            width: 100%;
            margin-top: 0.75rem;
            padding-top: 0.5rem;
            border-top: 1px solid rgba(255,255,255,0.25);
        }

        .user-profile {
            width: 100%;
            border-radius: 8px;
            justify-content: flex-start;
        }

        }

        /* =====================
           DESKTOP HOVER DROPDOWN (≥ 992px)
        ===================== */
        @@media (min-width: 992px) {
            .navbar-nav .dropdown:hover > .dropdown-menu

        {
            display: block;
            margin-top: 0;
        }

        .navbar-nav .dropdown-toggle::after {
            transition: transform 0.2s ease;
        }

        .navbar-nav .dropdown:hover .dropdown-toggle::after {
            transform: rotate(180deg);
        }

            .navbar-center {
                justify-content: center;
                flex-grow: 1;
            }


        }
    </style>
</head>

<body>
    @{
        var username = Context.Session.GetString("Username");
        var role = Context.Session.GetString("Role");
        bool isLoggedIn = !string.IsNullOrEmpty(username);

        string controller = ViewContext.RouteData.Values["Controller"]?.ToString() ?? "";
    }



    <!-- NAVBAR -->
    <nav class="navbar navbar-expand-lg navbar-dark navbar-custom">
        <div class="container-fluid px-lg-4">

            <!-- BRAND (LEFT) -->
            <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                <i class="bi bi-cricket"></i> CricbuzzAppV2
            </a>

            <!-- TOGGLER (MOBILE) -->
            <button class="navbar-toggler" type="button"
                    data-bs-toggle="collapse"
                    data-bs-target="#navbarNav"
                    aria-controls="navbarNav"
                    aria-expanded="false"
                    aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <!-- COLLAPSE -->
            <div class="collapse navbar-collapse" id="navbarNav">

                @if (isLoggedIn)
                {
                    <!-- CENTER NAV -->
                    <ul class="navbar-nav navbar-user ms-lg-auto">


                        <li class="nav-item">
                            <a class="nav-link @(controller == "Home" ? "active" : "")"
                               asp-controller="Home" asp-action="Index">
                                <i class="bi bi-speedometer2"></i> Dashboard
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link @(controller == "Players" ? "active" : "")"
                               asp-controller="Players" asp-action="Index">
                                <i class="bi bi-person-fill"></i> Players
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link @(controller == "Teams" ? "active" : "")"
                               asp-controller="Teams" asp-action="Index">
                                <i class="bi bi-people-fill"></i> Teams
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link @(controller == "Matches" ? "active" : "")"
                               asp-controller="Matches" asp-action="Index">
                                <i class="bi bi-trophy-fill"></i> Matches
                            </a>
                        </li>

                        <!-- MORE -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle
                               @(controller == "Scorecards"
                                                            || controller == "PlayerStats"
                                                            || controller == "Users"
                                                            ? "active" : "")"
                           role="button"
                           data-bs-toggle="dropdown">
                            <i class="bi bi-three-dots"></i> More
                        </a>

                            <ul class="dropdown-menu dropdown-menu-dark">
                                <li>
                                    <a class="dropdown-item @(controller == "Scorecards" ? "active" : "")"
                                       asp-controller="Scorecards" asp-action="Index">
                                        <i class="bi bi-clipboard2-data-fill me-2"></i> Scorecards
                                    </a>
                                </li>

                                <li>
                                    <a class="dropdown-item @(controller == "PlayerStats" ? "active" : "")"
                                       asp-controller="PlayerStats" asp-action="Index">
                                        <i class="bi bi-graph-up me-2"></i> Stats
                                    </a>
                                </li>

                            @if (role == "SuperAdmin")
                                {
                                    <li>
                                        <a class="dropdown-item @(controller == "Users" ? "active" : "")"
                                           asp-controller="Users" asp-action="Index">
                                            <i class="bi bi-people-fill me-2"></i> Users
                                        </a>
                                    </li>
                                }
                            </ul>
                        </li>
                    </ul>

                    <!-- USER (RIGHT) -->
                    <ul class="navbar-nav navbar-user ms-lg-auto">
                        <li class="nav-item">
                            <div class="user-profile">
                                <i class="bi bi-person-circle"></i>
                                @username (@role)
                            </div>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Account" asp-action="Logout">
                                <i class="bi bi-box-arrow-right"></i> Logout
                            </a>
                        </li>
                    </ul>
                }
                else
                {
                    <ul class="navbar-nav ms-lg-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Account" asp-action="Login">
                                Login
                            </a>
                        </li>
                    </ul>
                }

            </div>
        </div>
    </nav>


    <div class="container mt-4">
        @RenderBody()
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Global Delete Modal -->
    <partial name="_DeleteModal" />

    <!-- Global Delete Script -->
    <script src="~/js/delete.js"></script>

    <!-- Page-specific scripts -->
    @RenderSection("Scripts", required: false)

    <script>
        document.addEventListener("DOMContentLoaded", () => {
            setTimeout(() => {
                document.querySelectorAll(".auto-dismiss").forEach(alert => {
                    alert.classList.remove("show");
                    alert.classList.add("fade");

                    setTimeout(() => alert.remove(), 500);
                });
            }, 3000); // ⏱️ 3 seconds
        });
    </script>

</body>

</html>
