<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Cricbuzz</title>

    <!-- CSS Dependencies -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/userportal.css" />
</head>

<body>
    <!-- Enhanced Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark navbar-custom sticky-top">
        <div class="container">
            <a class="navbar-brand" href="@Url.Action("Index", "UserPortal")">
                <i class="bi bi-trophy-fill"></i>
                Cricbuzz
            </a>
            <button class="navbar-toggler border-0" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link @(ViewContext.RouteData.Values["Action"].ToString() == "Index" ? "active" : "")"
                            href="@Url.Action("Index", "UserPortal")">
                            <i class="bi bi-house-door-fill"></i>Home
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @(ViewContext.RouteData.Values["Action"].ToString() == "Matches" ? "active" : "")"
                           href="@Url.Action("Matches", "UserPortal")">
                            <i class="bi bi-calendar2-check-fill"></i>Matches
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @(ViewContext.RouteData.Values["Action"].ToString() == "Teams" ? "active" : "")"
                           href="@Url.Action("Teams", "UserPortal")">
                            <i class="bi bi-people-fill"></i>Teams
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @(ViewContext.RouteData.Values["Action"].ToString() == "Players" ? "active" : "")"
                            href="@Url.Action("Players", "UserPortal")">
                            <i class="bi bi-person-fill"></i>Players
                        </a>
                    </li>
                   
                    
                    <li class="nav-item">
                        <a class="nav-link @(ViewContext.RouteData.Values["Action"].ToString() == "Stats" ? "active" : "")"
                            href="@Url.Action("Stats", "UserPortal")">
                            <i class="bi bi-graph-up-arrow"></i>Stats
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>



    <!-- Main content -->
    <div class="container mt-4">
        @RenderBody()
    </div>

    <!-- Enhanced Footer -->
    <footer class="footer-custom">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-6 text-center text-md-start">
                    <h5 class="mb-3">
                        <i class="bi bi-cricket"></i> Cricbuzz App
                    </h5>
                    <p class="mb-0">Your ultimate cricket companion for scores, stats, and updates.</p>
                </div>
                <div class="col-md-6 text-center text-md-end">
                    <p class="mb-0">
                        <i class="bi bi-c-circle"></i> @DateTime.Now.Year Cricbuzz App
                        <br>
                        <small>Made with <i class="bi bi-heart-fill text-danger"></i> for cricket fans</small>
                    </p>
                </div>
            </div>
        </div>
    </footer>

    <!-- JavaScript Dependencies -->
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>
