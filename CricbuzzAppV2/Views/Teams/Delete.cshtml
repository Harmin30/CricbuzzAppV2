@model CricbuzzAppV2.Models.Team
@{
    ViewData["Title"] = "Delete Team";
    Layout = "_Layout";
}

<h2 class="mb-4">🗑 Delete Team</h2>

<div class="card shadow-sm p-4 text-center">
    <img src="@(string.IsNullOrEmpty(Model.ImageUrl) ? "/images/default-team.png" : Model.ImageUrl)"
         class="rounded-circle mb-3" style="width:80px;height:80px;object-fit:cover;" />

    <h5>Are you sure you want to delete this team?</h5>

    <dl class="row mt-3">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.TeamName</dd>

        <dt class="col-sm-2">Country</dt>
        <dd class="col-sm-10">@Model.Country</dd>

        <dt class="col-sm-2">Coach</dt>
        <dd class="col-sm-10">@Model.Coach</dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="TeamId" />
        <button type="submit" class="btn btn-danger">🗑 Delete</button>
        <a asp-action="Index" class="btn btn-secondary">↩ Back to List</a>
    </form>
</div>
