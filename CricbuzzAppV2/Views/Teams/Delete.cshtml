@model CricbuzzAppV2.Models.Team
@{
    ViewData["Title"] = "Delete Team";
}


<h2 class="mb-4 text-center text-danger">
    <i class="fa-solid fa-trash me-2"></i>Delete Team
</h2>

<div class="card shadow-sm mx-auto p-4"
     style="max-width: 600px; border-radius: 16px;">

    <!-- Team Preview -->
    <div class="text-center mb-3">
        <img src="@Model.ImageUrl"
             class="rounded-circle border"
             style="width:120px;height:120px;object-fit:cover;" />
    </div>

    <!-- Warning -->
    <div class="alert alert-danger text-center">
        <strong>Are you sure?</strong><br />
        This action will permanently delete the team.
    </div>

    <!-- Team Info -->
    <dl class="row mt-3">
        <dt class="col-sm-4">Team Name</dt>
        <dd class="col-sm-8 fw-semibold">@Model.TeamName</dd>

        <dt class="col-sm-4">Country</dt>
        <dd class="col-sm-8">@Model.Country</dd>

        <dt class="col-sm-4">Coach</dt>
        <dd class="col-sm-8">@Model.Coach</dd>
    </dl>

    <!-- Actions -->
    <form asp-action="Delete" method="post" class="text-center mt-4">
        <input type="hidden" name="id" value="@Model.TeamId" />

        <button type="submit" class="btn btn-danger px-4 me-2">
            Delete Team
        </button>

        <a asp-action="Index" class="btn btn-outline-secondary px-4">
            Cancel
        </a>
    </form>
</div>
