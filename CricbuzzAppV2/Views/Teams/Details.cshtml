@model CricbuzzAppV2.Models.Team
@{
    ViewData["Title"] = "Team Details";
}
<h2 class="mb-4 text-center">
    <i class="fa-solid fa-eye me-2"></i>Team Details
</h2>

<div class="card shadow-sm mx-auto p-4"
     style="max-width: 650px; border-radius: 16px;">

    <!-- Team Logo -->
    <div class="text-center mb-4">
        <img src="@Model.ImageUrl"
             class="rounded-circle border shadow-sm"
             style="width:140px;height:140px;object-fit:cover;" />
    </div>

    <!-- Team Info -->
    <div class="row mb-2">
        <div class="col-sm-4 text-muted fw-semibold">Team Name</div>
        <div class="col-sm-8">@Model.TeamName</div>
    </div>

    <hr />

    <div class="row mb-2">
        <div class="col-sm-4 text-muted fw-semibold">Country</div>
        <div class="col-sm-8">@Model.Country</div>
    </div>

    <hr />

    <div class="row mb-2">
        <div class="col-sm-4 text-muted fw-semibold">Coach</div>
        <div class="col-sm-8">@Model.Coach</div>
    </div>

    <!-- Actions -->
    <div class="d-flex justify-content-center gap-3 mt-4">
        <a asp-action="Edit"
           asp-route-id="@Model.TeamId"
           class="btn btn-outline-primary px-4">
            Edit
        </a>

        @* <a asp-action="Delete"
           asp-route-id="@Model.TeamId"
           class="btn btn-outline-danger px-4">
            Delete
        </a> *@

        <a asp-action="Index"
           class="btn btn-outline-secondary px-4">
            Back to List
        </a>
    </div>
</div>
