@model CricbuzzAppV2.Models.Team

@{
    ViewData["Title"] = "Team Details";
    Layout = "_Layout";
}

<h2 class="mb-4">👁 Team Details</h2>

<div class="card shadow-sm p-4">
    <dl class="row">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.TeamName</dd>

        <dt class="col-sm-2">Country</dt>
        <dd class="col-sm-10">@Model.Country</dd>

        <dt class="col-sm-2">Coach</dt>
        <dd class="col-sm-10">@Model.Coach</dd>
    </dl>

    <a asp-action="Index" class="btn btn-secondary">↩ Back to List</a>
</div>
