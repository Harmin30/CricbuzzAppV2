@model CricbuzzAppV2.Models.Team
@{
    ViewData["Title"] = "Edit Team";
    Layout = "_Layout";
}

<h2 class="mb-4">✏ Edit Team</h2>

<div class="card shadow-sm p-4">
    <form asp-action="Edit" method="post">
        <input type="hidden" asp-for="TeamId" />

        <div class="mb-3">
            <label asp-for="TeamName" class="form-label"></label>
            <input asp-for="TeamName" class="form-control" />
            <span asp-validation-for="TeamName" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Country" class="form-label"></label>
            <input asp-for="Country" class="form-control" />
            <span asp-validation-for="Country" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Coach" class="form-label"></label>
            <input asp-for="Coach" class="form-control" />
            <span asp-validation-for="Coach" class="text-danger"></span>
        </div>

        <div class="mb-4">
            <label asp-for="ImageUrl" class="form-label">Team Logo URL</label>
            <input asp-for="ImageUrl" class="form-control" id="imageUrl"
                   placeholder="Enter image URL (e.g., https://example.com/image.jpg)" />
            <span asp-validation-for="ImageUrl" class="text-danger"></span>

            <div class="mt-3">
                <label class="form-label">Logo Preview:</label>
                <div class="d-flex align-items-center gap-3">
                    <img id="logoPreview"
                         src="@(string.IsNullOrEmpty(Model.ImageUrl) ? "/images/default-team.png" : Model.ImageUrl)"
                         class="rounded-circle border"
                         style="width: 80px; height: 80px; object-fit: cover;"
                         onerror="this.src='/images/default-team.png'; showImageError();" />

                    <div id="imageError" class="text-danger" style="display: none;">
                        ⚠️ Unable to load image. Please check the URL or try a different one.
                    </div>
                </div>
            </div>
        </div>

        <div class="d-flex gap-2">
            <button type="submit" class="btn btn-success">💾 Update</button>
            <a asp-action="Index" class="btn btn-secondary">↩ Back to List</a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        // Live preview of the image URL
        document.getElementById('imageUrl').addEventListener('input', function() {
            const preview = document.getElementById('logoPreview');
            const errorDiv = document.getElementById('imageError');
            const imageUrl = this.value;

            if (imageUrl) {
                preview.src = imageUrl;
                errorDiv.style.display = 'none';
            } else {
                preview.src = '/images/default-team.png';
                errorDiv.style.display = 'none';
            }
        });

        function showImageError() {
            document.getElementById('imageError').style.display = 'block';
        }

        // Validate image URL on form submit
        document.querySelector('form').addEventListener('submit', function(e) {
            const imageUrl = document.getElementById('imageUrl').value;
            if (imageUrl && !isValidImageUrl(imageUrl)) {
                e.preventDefault();
                alert('Please enter a valid image URL starting with http:// or https://');
            }
        });

        function isValidImageUrl(url) {
            return url.startsWith('http://') || url.startsWith('https://');
        }
    </script>
}
