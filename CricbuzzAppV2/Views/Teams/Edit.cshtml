@model CricbuzzAppV2.ViewModels.TeamEditViewModel

@{
    ViewData["Title"] = "Edit Team";
}

<h2 class="mb-4 text-center">
    <i class="fa-solid fa-pen-to-square me-2"></i>Edit Team
</h2>


<div class="card shadow-sm mx-auto p-4" style="max-width:720px;border-radius:16px;">

    <form asp-action="Edit"
          method="post"
          enctype="multipart/form-data">


        <input type="hidden" asp-for="TeamId" />

        <div class="row g-3">
            <div class="col-md-6">
                <label class="form-label fw-semibold">Team Name *</label>
                <input asp-for="TeamName" class="form-control" />
                <span asp-validation-for="TeamName" class="text-danger small"></span>
            </div>

            <div class="col-md-6">
                <label class="form-label fw-semibold">Country *</label>
                <select asp-for="Country" class="form-select">
                    <option value="">Select a country</option>
                    @foreach (var country in ViewBag.Countries)
                    {
                        <option value="@country">@country</option>
                    }
                </select>
                <span asp-validation-for="Country" class="text-danger small"></span>
            </div>

            <div class="col-md-12">
                <label class="form-label fw-semibold">Coach *</label>
                <input asp-for="Coach" class="form-control" />
                <span asp-validation-for="Coach" class="text-danger small"></span>
            </div>
        </div>

        <!-- Image -->
        <!-- Image Section -->
        <div class="mt-4">
            <label class="form-label fw-semibold text-center d-block">
                Team Logo
            </label>

            <div class="row align-items-center g-4 mt-2">

                <!-- Image Preview -->
                <div class="col-md-4 text-center">
                    <img id="logoPreview"
                         src="https://th.bing.com/th/id/OIP.FuJz0KDQ05jfCqQmo1rypwAAAA?w=167&h=176&c=7&r=0&o=7&pid=1.7&rm=3"
                         class="rounded-circle border shadow-sm"
                         style="width:140px;height:140px;object-fit:cover;" />
                </div>

                <!-- Options -->
                <div class="col-md-8">

                    <!-- File + ❌ -->
                    <div class="mb-2">
                        <div class="d-flex align-items-center gap-2">
                            <input asp-for="ImageFile"
                                   id="imageFile"
                                   class="form-control"
                                   type="file"
                                   accept="image/*"
                                   onchange="previewImage()" />

                            <button type="button"
                                    id="removeFileBtn"
                                    class="btn btn-outline-danger btn-sm"
                                    onclick="removeFile()"
                                    style="display:none;">
                                &times;
                            </button>
                        </div>

                        <small class="text-muted d-block mt-1">
                            Upload an image from your device
                        </small>
                    </div>

                    <div class="text-center text-muted my-2">— OR —</div>

                    <!-- URL + ❌ -->
                    <div class="mb-2">
                        <div class="d-flex align-items-center gap-2">
                            <input asp-for="ImageUrlInput"
                                   id="imageUrl"
                                   class="form-control"
                                   placeholder="Paste an image link"
                                   onchange="previewImageUrl()" />

                            <button type="button"
                                    id="removeUrlBtn"
                                    class="btn btn-outline-danger btn-sm"
                                    onclick="removeUrl()"
                                    style="display:none;">
                                &times;
                            </button>
                        </div>

                        <small class="text-muted d-block mt-1">
                            Use an image link from the web
                        </small>
                    </div>

                    <!-- Priority Info -->
                    <div id="priorityInfo"
                         class="alert alert-info py-2 small mt-2"
                         style="opacity:0.9;display:none;">
                        <i class="fa-solid fa-circle-info me-1"></i>
                        If you use both options, the uploaded image will be used.
                    </div>

                    <div id="imageError"
                         class="text-danger small mt-2"
                         style="display:none;">
                        Unable to load the image from the link.
                    </div>
                </div>
            </div>
        </div>



        <div class="d-flex justify-content-center gap-3 mt-4">
            <button type="submit" class="btn btn-success px-4">Update</button>
            <a asp-action="Index" class="btn btn-outline-secondary px-4">Cancel</a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        const preview = document.getElementById("logoPreview");
        const imageFile = document.getElementById("imageFile");
        const imageUrl = document.getElementById("imageUrl");

        const removeFileBtn = document.getElementById("removeFileBtn");
        const removeUrlBtn = document.getElementById("removeUrlBtn");

        const priorityInfo = document.getElementById("priorityInfo");
        const imageError = document.getElementById("imageError");

        const defaultImage =
            "https://th.bing.com/th/id/OIP.FuJz0KDQ05jfCqQmo1rypwAAAA?w=167&h=176&c=7&r=0&o=7&pid=1.7&rm=3";

        function updatePreview() {
            if (imageFile.files.length > 0) {
                const reader = new FileReader();
                reader.onload = e => preview.src = e.target.result;
                reader.readAsDataURL(imageFile.files[0]);
            }
            else if (imageUrl.value.trim() !== "") {
                preview.src = imageUrl.value;
            }
            else {
                preview.src = defaultImage;
            }

            priorityInfo.style.display =
                (imageFile.files.length > 0 && imageUrl.value.trim() !== "")
                    ? "block"
                    : "none";
        }

        function previewImage() {
            removeFileBtn.style.display = "inline-block";
            imageError.style.display = "none";
            updatePreview();
        }

        function previewImageUrl() {
            if (!imageUrl.value) return;

            const img = new Image();
            img.onload = () => {
                removeUrlBtn.style.display = "inline-block";
                imageError.style.display = "none";
                updatePreview();
            };
            img.onerror = () => imageError.style.display = "block";
            img.src = imageUrl.value;
        }

        function removeFile() {
            imageFile.value = "";
            removeFileBtn.style.display = "none";
            updatePreview();
        }

        function removeUrl() {
            imageUrl.value = "";
            removeUrlBtn.style.display = "none";
            imageError.style.display = "none";
            updatePreview();
        }
    </script>


    </script>
}