@model IEnumerable<CricbuzzAppV2.Models.Team>

@{
    ViewData["Title"] = "Teams";
    Layout = "_Layout";
}

<!-- Header -->
<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="fw-semibold">Teams</h2>

    <a asp-action="Create" class="btn btn-success">
        <i class="fa-solid fa-plus me-1"></i> Add Team
    </a>
</div>

<!-- Search Bar -->
<div class="d-flex align-items-center gap-2 mb-2">
    <div class="flex-grow-1">
        <div class="input-group shadow-sm">
            <span class="input-group-text bg-white">
                <i class="fa-solid fa-magnifying-glass text-muted"></i>
            </span>

            <input type="text"
                   id="searchInput"
                   class="form-control"
                   placeholder="Search teams..." />
        </div>
    </div>
</div>

<!-- Alerts -->
@if (TempData["Success"] != null)
{
    <div class="alert alert-success fade show auto-dismiss">
        @Html.Raw(TempData["Success"])
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger fade show auto-dismiss">
        @Html.Raw(TempData["Error"])
    </div>
}


<!-- Unified Selection Bar -->
<div id="selectionBar"
     class="mb-2 d-flex justify-content-between align-items-center">

    <div class="form-check">
        <input class="form-check-input"
               type="checkbox"
               id="unifiedSelectAll">

        <label class="form-check-label fw-semibold small">
            Select all
        </label>
    </div>

    <span class="text-muted small">
        Click rows or tap cards to select
    </span>
</div>

<!-- Bulk Delete Form -->
<form class="bulk-delete-form"
      data-controller="Teams">


    <!-- Desktop Table -->
    <div class="table-responsive d-none d-md-block">
        <table class="table table-hover table-bordered align-middle shadow-sm">
            <thead class="table-dark">
                <tr>
                    <th style="width:40px;"></th>
                    <th>Logo</th>
                    <th>Team Name</th>
                    <th>Country</th>
                    <th>Coach</th>
                    <th class="text-center" style="width:160px;">Actions</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var team in Model)
                {
                    <tr class="team-row selectable"
                        data-id="@team.TeamId"
                        data-name="@team.TeamName"
                        data-country="@team.Country">

                        <td>
                            <input type="checkbox"
                                   class="form-check-input row-checkbox"
                                   name="selectedIds"
                                   value="@team.TeamId"
                                   onclick="event.stopPropagation()" />
                        </td>

                        <td>
                            <img src="@(string.IsNullOrEmpty(team.ImageUrl)
                                                                 ? "https://via.placeholder.com/60"
                                                                 : team.ImageUrl)"
                             class="rounded-circle border"
                             style="width:45px;height:45px;object-fit:cover;" />
                    </td>

                        <td class="fw-semibold">@team.TeamName</td>
                        <td>@team.Country</td>
                        <td>@team.Coach</td>

                        <td class="text-center">
                            <div class="btn-group">
                                <a asp-action="Details" asp-route-id="@team.TeamId"
                                   class="btn btn-outline-info btn-sm">
                                    <i class="fa-solid fa-eye"></i>
                                </a>
                                <a asp-action="Edit" asp-route-id="@team.TeamId"
                                   class="btn btn-outline-warning btn-sm">
                                    <i class="fa-solid fa-pen-to-square"></i>
                                </a>
                                <button type="button"
                                        class="btn btn-outline-danger btn-sm single-delete-btn"
                                        data-id="@team.TeamId"
                                        data-name="@team.TeamName"
                                        data-controller="Teams">
                                    

                                    <i class="fa-solid fa-trash"></i>
                                </button>

                            </div>
                        </td>
                    </tr>
                }            
            </tbody>
        </table>
    </div>

    <!-- Mobile Cards -->
    <div class="d-md-none">
        @foreach (var team in Model)
        {
            <div class="card shadow-sm mb-3 team-card selectable"
                 data-id="@team.TeamId"
                 data-name="@team.TeamName"
                 data-country="@team.Country">

                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center mb-2">
                        <div class="fw-semibold d-flex align-items-center gap-2">
                            <img src="@(string.IsNullOrEmpty(team.ImageUrl)
                                                                 ? "https://via.placeholder.com/60"
                                                                 : team.ImageUrl)"
                             class="rounded-circle border"
                             style="width:40px;height:40px;object-fit:cover;" />
                        @team.TeamName
                    </div>

                        <input type="checkbox"
                               class="form-check-input row-checkbox"
                               name="selectedIds"
                               value="@team.TeamId"
                               onclick="event.stopPropagation()" />
                    </div>

                    <div class="small text-muted mb-1">
                        <strong>Country:</strong> @team.Country
                    </div>

                    <div class="small text-muted mb-2">
                        <strong>Coach:</strong> @team.Coach
                    </div>

                    <div class="d-flex gap-2">
                        <a asp-action="Details" asp-route-id="@team.TeamId"
                           class="btn btn-outline-info btn-sm w-100">
                            View
                        </a>
                        <a asp-action="Edit" asp-route-id="@team.TeamId"
                           class="btn btn-outline-warning btn-sm w-100">
                            Edit
                        </a>
                        <button type="button"
                                class="btn btn-outline-danger btn-sm w-100 single-delete-btn"
                                data-id="@team.TeamId"
                                data-name="@team.TeamName"
                                data-controller="Teams">
                            Delete
                        </button>

                    </div>
                </div>
            </div>
                }
    </div>

    


    

    <!-- Sticky Bulk Action Bar -->
    <div id="bulkActionBar"
         class="position-fixed bottom-0 start-0 w-100 bg-white border-top shadow-lg py-2 px-3"
         style="display:none; z-index:1050;">

        <div class="container-fluid d-flex justify-content-between align-items-center">
            <span class="fw-semibold text-muted">
                <span id="selectedCount">0</span> team(s) selected
            </span>

            <button type="submit" class="btn btn-danger">
                Delete Selected
            </button>
        </div>
    </div>
</form>


@section Scripts {
    <script>
        // =============================
        // Common elements
        // =============================
        const selectAll = document.getElementById("unifiedSelectAll");
        const actionBar = document.getElementById("bulkActionBar");
        const selectedCountEl = document.getElementById("selectedCount");

        // =============================
        // Helpers
        // =============================
        function getCheckboxes() {
            return document.querySelectorAll(".row-checkbox");
        }

        function getChecked() {
            return document.querySelectorAll(".row-checkbox:checked");
        }

        function updateBulkBar() {
            const count = getChecked().length;
            selectedCountEl.textContent = count;
            actionBar.style.display = count > 0 ? "block" : "none";
        }

        function syncSelectAll() {
            selectAll.checked =
                getCheckboxes().length > 0 &&
                getCheckboxes().length === getChecked().length;
        }

        // =============================
        // Select all
        // =============================
        selectAll.addEventListener("change", function () {
            getCheckboxes().forEach(cb => cb.checked = this.checked);
            document.querySelectorAll(".selectable")
                .forEach(el => el.classList.toggle("table-active", this.checked));
            updateBulkBar();
        });

        // =============================
        // Row / Card click selection
        // =============================
        document.querySelectorAll(".selectable").forEach(el => {
            el.addEventListener("click", e => {
                if (e.target.closest("a,button,input")) return;
                const cb = el.querySelector(".row-checkbox");
                cb.checked = !cb.checked;
                el.classList.toggle("table-active", cb.checked);
                updateBulkBar();
                syncSelectAll();
            });
        });

        document.addEventListener("change", e => {
            if (e.target.classList.contains("row-checkbox")) {
                e.target.closest(".selectable")
                    ?.classList.toggle("table-active", e.target.checked);
                updateBulkBar();
                syncSelectAll();
            }
        });

        // =============================
        // Search
        // =============================
        document.getElementById("searchInput")
            .addEventListener("input", function () {
                const q = this.value.toLowerCase();
                document.querySelectorAll(".team-row,.team-card")
                    .forEach(el => {
                        const name = el.dataset.name?.toLowerCase() || "";
                        const country = el.dataset.country?.toLowerCase() || "";
                        el.style.display =
                            name.includes(q) || country.includes(q)
                                ? ""
                                : "none";
                    });
            });
    </script>
}



