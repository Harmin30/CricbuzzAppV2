@{
    Layout = "_UserLayout";
    ViewData["Title"] = "Home";
}

<style>
    :root {
        --primary: #0F5132;
        --secondary: #198754;
        --accent: #D4AF37;
        --light-bg: #F8F9FA;
        --dark-text: #212529;
    }

    /* HERO */
    .hero-section {
        position: relative;
        min-height: 85vh;
        background: linear-gradient(135deg, #0C3D2E, #0F5132);
        color: white;
    }

    .hero-overlay {
        position: absolute;
        inset: 0;
        background: rgba(0,0,0,0.15);
    }

    .hero-content {
        position: relative;
        padding-top: 7rem;
    }

    /* BUTTON */
    .btn-cricbuzz {
        background-color: #198754; /* lighter green */
        color: #ffffff;
        border-radius: 30px;
        padding: 12px 28px;
        font-weight: 500;
        border: 2px solid transparent;
        transition: all 0.25s ease-in-out;
    }

        .btn-cricbuzz:hover {
            background-color: #ffffff; /* contrast */
            color: #0F5132; /* dark green text */
            border-color: #0F5132; /* outline */
            transform: translateY(-2px);
        }


    /* STATS */
    .stats-counter {
        background: var(--light-bg);
        padding: 3rem 0;
    }

    .stats-item {
        background: white;
        border-radius: 16px;
        padding: 24px;
        border: 1px solid #e9ecef;
        transition: 0.25s;
    }

        .stats-item:hover {
            box-shadow: 0 8px 20px rgba(0,0,0,0.08);
        }

        .stats-item .number {
            font-size: 2.1rem;
            font-weight: 700;
            color: var(--primary);
        }

    /* FEATURE CARDS */
    .feature-card {
        background: white;
        border-radius: 18px;
        border: 1px solid #e9ecef;
        transition: 0.3s ease;
    }

        .feature-card:hover {
            transform: translateY(-6px);
            box-shadow: 0 12px 28px rgba(0,0,0,0.12);
        }

    .feature-icon {
        font-size: 2.8rem;
        color: var(--secondary);
    }

    /* BADGE */
    .badge.bg-success {
        background-color: var(--accent) !important;
        color: #000;
    }

    /* MATCH CARDS */
    .card {
        border-radius: 16px;
        border: 1px solid #e9ecef;
    }

    .card-title {
        color: var(--primary);
    }

    /* FOOTER */
    .custom-footer {
        background: #0F5132;
        color: #dee2e6;
        padding: 1.4rem 0;
    }
</style>


<!-- HERO -->
<section class="hero-section">
    <div class="hero-overlay"></div>
    <div class="cricket-ball ball1"></div>
    <div class="cricket-ball ball2"></div>
    <div class="cricket-ball ball3"></div>

    <div class="container hero-content text-center">
        <h1 class="display-4 fw-bold mb-4">
            Welcome to Cricbuzz App 🏏 <span class="badge bg-success">Live</span>
        </h1>
        <p class="lead fs-5 mb-5 mx-auto">
            Your ultimate destination for live cricket scores, player statistics,
            and match insights.
        </p>

        <div class="d-flex justify-content-center gap-3">
            <a href="@Url.Action("TopBatsmen", "UserPortal")" class="btn btn-cricbuzz btn-lg">
                <i class="bi bi-trophy me-2"></i>Top Batsmen
            </a>
            <a href="@Url.Action("TopBowlers", "UserPortal")" class="btn btn-cricbuzz btn-lg">
                <i class="bi bi-bullseye me-2"></i>Top Bowlers
            </a>
        </div>
    </div>
</section>

<!-- STATS -->
<section class="stats-counter">
    <div class="container">
        <div class="row g-4">
            <div class="col-md-3 col-6"><div class="stats-item"><div class="number">@ViewBag.ActivePlayers</div><div>Players</div></div></div>
            <div class="col-md-3 col-6"><div class="stats-item"><div class="number">@ViewBag.TotalMatches</div><div>Matches</div></div></div>
            <div class="col-md-3 col-6"><div class="stats-item"><div class="number">@ViewBag.TotalTeams</div><div>Teams</div></div></div>
            <div class="col-md-3 col-6"><div class="stats-item"><div class="number">@ViewBag.TotalStats</div><div>Stats</div></div></div>
        </div>
    </div>
</section>

<!-- FEATURES -->
<section class="container my-5">
    <h2 class="text-center fw-bold mb-5">Explore Cricket Insights</h2>
    <div class="row g-4">

        <!-- Batsmen -->
        <div class="col-md-4">
            <div class="feature-card p-4 h-100 d-flex flex-column text-center">
                <div class="feature-icon mb-3"><i class="bi bi-trophy-fill"></i></div>
                <h4>Top Batsmen</h4>
                <p>Discover cricket's finest batsmen and their records.</p>
                @if (ViewBag.TopBatsman != null)
                {
                    <p class="text-success fw-bold">@ViewBag.TopBatsman.Player?.FullName<br />@ViewBag.TopBatsman.Runs Runs</p>
                }
                <a class="btn btn-cricbuzz mt-auto" href="@Url.Action("TopBatsmen", "UserPortal")">View Rankings</a>
            </div>
        </div>

        <!-- Bowlers -->
        <div class="col-md-4">
            <div class="feature-card p-4 h-100 d-flex flex-column text-center">
                <div class="feature-icon mb-3"><i class="bi bi-bullseye"></i></div>
                <h4>Top Bowlers</h4>
                <p>Explore world-class bowlers and wicket leaders.</p>
                @if (ViewBag.TopBowler != null)
                {
                    <p class="text-success fw-bold">@ViewBag.TopBowler.Player?.FullName<br />@ViewBag.TopBowler.Wickets Wickets</p>
                }
                <a class="btn btn-cricbuzz mt-auto" href="@Url.Action("TopBowlers", "UserPortal")">View Rankings</a>
            </div>
        </div>

        <!-- Teams -->
        <div class="col-md-4">
            <div class="feature-card p-4 h-100 d-flex flex-column text-center">
                <div class="feature-icon mb-3"><i class="bi bi-flag-fill"></i></div>
                <h4>Top Teams</h4>
                <p>Leading cricket teams and their player lineups.</p>
                @if (ViewBag.TopTeam != null)
                {
                    <p class="text-success fw-bold">@ViewBag.TopTeam.TeamName<br />@ViewBag.TopTeam.Players?.Count Players</p>
                }
                <a class="btn btn-cricbuzz mt-auto" href="@Url.Action("Teams", "UserPortal")">View Teams</a>
            </div>
        </div>
    </div>
</section>

<!-- FOOTER -->
<footer class="custom-footer text-center">
    <p class="mb-0">© @DateTime.Now.Year Cricbuzz App — Your Ultimate Cricket Companion 🏏</p>
</footer>
