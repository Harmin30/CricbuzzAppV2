@model CricbuzzAppV2.Models.Player

@{
    Layout = "_UserLayout";
    ViewData["Title"] = "Player Details";
}

<style>
    body {
        background: #f4f6f8;
    }

    /* ---------- HEADER ---------- */
    .player-hero {
        background: linear-gradient(135deg, #00a651, #007e3e);
        color: #fff;
        padding: 40px 20px;
        border-radius: 18px;
        text-align: center;
        box-shadow: 0 10px 28px rgba(0,0,0,.18);
    }

        .player-hero img {
            width: 150px;
            height: 150px;
            border-radius: 50%;
            object-fit: cover;
            border: 4px solid #fff;
            margin-bottom: 12px;
        }

        .player-hero h2 {
            font-weight: 700;
            margin-bottom: 4px;
        }

        .player-hero .meta {
            font-size: .95rem;
            opacity: .95;
        }

    /* ---------- SECTION ---------- */
    .section {
        background: #fff;
        border-radius: 16px;
        padding: 24px;
        margin-top: 30px;
        box-shadow: 0 6px 18px rgba(0,0,0,.08);
    }

    .section-title {
        font-weight: 700;
        color: #0b8043;
        margin-bottom: 18px;
        display: flex;
        align-items: center;
        gap: 8px;
    }

    /* ---------- PERSONAL INFO ---------- */
    .info-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
        gap: 16px;
    }

    .info-card {
        background: #f8f9fa;
        border-radius: 14px;
        padding: 14px;
    }

    .info-label {
        font-size: .75rem;
        text-transform: uppercase;
        color: #6c757d;
        margin-bottom: 4px;
    }

    .info-value {
        font-weight: 600;
        color: #212529;
    }

    /* ---------- STATS ---------- */
    .format-badge {
        background: #e8f5e9;
        color: #0b8043;
        padding: 6px 14px;
        border-radius: 999px;
        font-weight: 700;
        font-size: .8rem;
        display: inline-block;
        margin-bottom: 10px;
    }

    .stats-table th {
        background: #e8f5e9;
        color: #0b8043;
        font-weight: 600;
        font-size: .85rem;
    }

    .stats-table td {
        font-size: .9rem;
    }

    /* ---------- MOBILE STATS CARDS ---------- */
    .stat-card {
        background: #f8f9fa;
        border-radius: 14px;
        padding: 12px;
        margin-bottom: 10px;
        display: flex;
        justify-content: space-between;
    }

        .stat-card span {
            font-weight: 600;
        }

    /* ---------- BACK BUTTON ---------- */
    .back-btn {
        display: inline-block;
        margin-top: 25px;
        background: #00a651;
        color: #fff;
        border-radius: 999px;
        padding: 8px 22px;
        text-decoration: none;
        font-size: .9rem;
    }

        .back-btn:hover {
            background: #007e3e;
            color: #fff;
        }

    /* ---------- MOBILE STAT GRID ---------- */
    .mobile-stat-grid {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 12px;
    }

    .stat-box {
        background: #f8f9fa;
        border-radius: 14px;
        padding: 14px;
        text-align: center;
        box-shadow: 0 4px 12px rgba(0,0,0,.06);
    }

    .stat-label {
        font-size: .7rem;
        text-transform: uppercase;
        color: #6c757d;
        margin-bottom: 4px;
        letter-spacing: .5px;
    }

    .stat-value {
        font-size: 1.2rem;
        font-weight: 700;
        color: #0b8043;
    }

    /* Format wrapper (clean vertical rhythm) */
    .format-section {
        margin-bottom: 32px;
    }

    /* Mobile fine-tuning */
   @@media (max-width: 768px) {
        .format-badge

    {
        display:table;
        margin-bottom: 14px;
    }

    .mobile-stat-grid {
        margin-top: 6px;
    }

    }
    }
</style>

<div class="container my-4">

    <!-- HERO -->
    <div class="player-hero">
        <img src="@(string.IsNullOrEmpty(Model.ImageUrl)
                         ? "/images/default-player.png"
                         : Model.ImageUrl)" />

        <h2>@Model.FullName</h2>
        <div class="meta">
            @Model.Role • @Model.Team?.TeamName
        </div>
    </div>

    <!-- PERSONAL INFO -->
    @if (Model.PlayerPersonalInfo != null)
    {
        <div class="section">
            <div class="section-title">
                <i class="fa-solid fa-user"></i> Personal Information
            </div>


            <div class="info-grid">
                <div class="info-card">
                    <div class="info-label">Date of Birth</div>
                    <div class="info-value">@Model.PlayerPersonalInfo.DateOfBirth.ToString("dd MMM yyyy")</div>
                </div>

                <div class="info-card">
                    <div class="info-label">Birth Place</div>
                    <div class="info-value">@Model.PlayerPersonalInfo.BirthPlace</div>
                </div>

                <div class="info-card">
                    <div class="info-label">Height</div>
                    <div class="info-value">@Model.PlayerPersonalInfo.Height</div>
                </div>

                <div class="info-card">
                    <div class="info-label">Batting Style</div>
                    <div class="info-value">@Model.PlayerPersonalInfo.BattingStyle</div>
                </div>

                <div class="info-card">
                    <div class="info-label">Bowling Style</div>
                    <div class="info-value">@Model.PlayerPersonalInfo.BowlingStyle</div>
                </div>
            </div>
        </div>
    }

    <!-- STATS -->
    <div class="section">
        <div class="section-title">
            <i class="fa-solid fa-chart-column"></i> Career Statistics
        </div>


        @if (Model.PlayerStats != null && Model.PlayerStats.Any())
        {
            foreach (var stats in Model.PlayerStats)
            {
                <div class="format-section">
                    <div class="format-badge">
                        <i class="fa-solid fa-cricket-bat-ball me-1"></i>
                        @stats.Format Format
                    </div>


                    <!-- DESKTOP TABLES -->
                    <div class="table-responsive d-none d-md-block">
                        <table class="table table-bordered stats-table mb-4">
                            <thead>
                                <tr>
                                    <th>M</th>
                                    <th>Inn</th>
                                    <th>Runs</th>
                                    <th>HS</th>
                                    <th>100s</th>
                                    <th>50s</th>
                                    <th>Avg</th>
                                    <th>SR</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>@stats.MatchesPlayed</td>
                                    <td>@stats.Innings</td>
                                    <td>@stats.Runs</td>
                                    <td>@stats.HighestScore</td>
                                    <td>@stats.Hundreds</td>
                                    <td>@stats.Fifties</td>
                                    <td>@stats.BattingAverage</td>
                                    <td>@stats.StrikeRate</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>

                    <!-- MOBILE STATS -->
                    <div class="d-md-none">
                        <div class="mobile-stat-grid">
                            <div class="stat-box">
                                <div class="stat-label">Runs</div>
                                <div class="stat-value">@stats.Runs</div>
                            </div>

                            <div class="stat-box">
                                <div class="stat-label">Average</div>
                                <div class="stat-value">@stats.BattingAverage</div>
                            </div>

                            <div class="stat-box">
                                <div class="stat-label">Strike Rate</div>
                                <div class="stat-value">@stats.StrikeRate</div>
                            </div>

                            <div class="stat-box">
                                <div class="stat-label">Highest</div>
                                <div class="stat-value">@stats.HighestScore</div>
                            </div>
                        </div>
                    </div>

                </div>


            }
        }
        else
        {
            <p class="text-muted">No stats available for this player yet.</p>
        }

        <a asp-action="Players" class="back-btn">← Back to Players</a>
    </div>
</div>
