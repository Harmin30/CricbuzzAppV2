@model IEnumerable<CricbuzzAppV2.Models.Player>

@{
    Layout = "_UserLayout";
    ViewData["Title"] = "Players";
}

<style>
    /* ---------- Player Card (NEW DESIGN) ---------- */

    .player-card {
        border-radius: 14px;
        border: 1px solid #e6e6e6;
        background: #fff;
        transition: box-shadow .2s ease, transform .2s ease;
    }

        .player-card:hover {
            box-shadow: 0 8px 22px rgba(0,0,0,.12);
            transform: translateY(-3px);
        }

    .player-avatar {
        width: 64px;
        height: 64px;
        border-radius: 50%;
        object-fit: cover;
        border: 2px solid #e8f5e9;
    }

    .player-name {
        font-weight: 600;
        font-size: 1rem;
        color: #0b8043;
    }

    .player-role {
        font-size: .8rem;
        color: #6c757d;
    }

    .team-chip {
        background: #f1f9f3;
        color: #0b8043;
        padding: 3px 10px;
        border-radius: 999px;
        font-size: .7rem;
        font-weight: 600;
    }

    .btn-player {
        background: #00a651;
        color: #fff;
        border-radius: 999px;
        font-size: .75rem;
        padding: .35rem 1.1rem;
    }

        .btn-player:hover {
            background: #007e3e;
            color: #fff;
        }

    .search-wrapper {
        margin-bottom: 2.5rem; /* breathing space */
    }

    .search-divider {
        border-top: 1px solid #e9ecef;
        width: 70%;
        margin: 0 auto 2.5rem;
    }


    /* Mobile tweaks */
   @@media (max-width: 576px) {
        .player-avatar

    {
        width: 56px;
        height: 56px;
    }

    }
</style>

<div class="container mt-4">

    <!-- HEADER -->
    <div class="text-center mb-4">
        <h2 class="page-title">Players</h2>
        <p class="page-subtitle">
            Browse cricketers, teams and individual profiles
        </p>
    </div>

    <!-- SEARCH -->
    <div class="search-wrapper mb-4">
        <hr class="search-divider d-none d-md-block mb-4">


        <form asp-action="Players" method="get" class="input-group shadow-sm">
            <input type="text"
                   name="searchQuery"
                   value="@ViewBag.SearchQuery"
                   class="form-control"
                   placeholder="Search player..." />

            <button class="btn">
                <i class="bi bi-search"></i>
            </button>
        </form>
    </div>

    <!-- PLAYERS GRID -->
    <div class="row g-3">
        @if (Model != null && Model.Any())
        {
            foreach (var player in Model)
            {
                <div class="col-12 col-md-6 col-lg-4">
                    <div class="player-card p-3 h-100">

                        <div class="d-flex align-items-center gap-3">
                            <!-- Avatar -->
                            <img src="@(string.IsNullOrEmpty(player.ImageUrl)
                                                             ? "/images/default-player.png"
                                                             : player.ImageUrl)"
                         class="player-avatar"
                         alt="@player.FullName" />

                            <!-- Info -->
                            <div class="flex-grow-1">
                                <div class="player-name">@player.FullName</div>
                                <div class="player-role">@player.Role</div>

                        @if (player.Team != null)
                                {
                                    <div class="mt-1">
                                        <span class="team-chip">@player.Team.TeamName</span>
                                    </div>
                                }
                            </div>
                        </div>

                        <!-- CTA -->
                        <div class="text-end mt-3">
                            <a asp-action="PlayerDetails"
                               asp-route-id="@player.PlayerId"
                               class="btn btn-player btn-sm">
                                View Profile
                            </a>
                        </div>

                    </div>
                </div>
            }
        }
        else
        {
            <div class="text-center text-muted mt-5">
                <i class="bi bi-person-x fs-1"></i>
                <p class="mt-2">No players found.</p>
            </div>
        }
    </div>

</div>
