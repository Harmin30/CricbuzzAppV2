@model IEnumerable<CricbuzzAppV2.Models.Team>

@{
    Layout = "_UserLayout";
    ViewData["Title"] = "Teams";
}

<div class="container my-4">

    <!-- HEADER -->
    <div class="mb-4">
        <a href="@Url.Action("Index", "UserPortal")" class="btn-back">
            <i class="fa-solid fa-arrow-left me-1"></i> Back to Home
        </a>

        <h3 class="mt-3 mb-1 page-title">
            <i class="fa-solid fa-trophy me-2"></i>Cricket Teams
        </h3>

        <p class="text-muted mb-0">
            Discover and explore cricket teams from around the world
        </p>
    </div>

    <!-- TEAM LIST -->
    <div class="team-list">
        @foreach (var team in Model.OrderBy(t => t.TeamName))
        {
            <div class="team-row"
                 onclick="location.href='@Url.Action("TeamDetails", "UserPortal", new { id = team.TeamId })'">

                <!-- LOGO -->
                <img src="@(string.IsNullOrEmpty(team.ImageUrl) ? "/images/default-team.png" : team.ImageUrl)"
                     class="team-avatar"
                     onerror="this.src='/images/default-team.png'" />

                <!-- INFO -->
                <div class="team-info">
                    <div class="team-name">@team.TeamName</div>

                    <div class="team-meta">
                        <span>
                            <i class="fa-solid fa-globe me-1"></i>@team.Country
                        </span>

                        <span class="dot">•</span>

                        <span>
                            <i class="fa-solid fa-people-group me-1"></i>@team.Players.Count Players
                        </span>
                    </div>
                </div>

                <!-- ARROW -->
                <i class="fa-solid fa-chevron-right arrow"></i>
            </div>
        }
    </div>
</div>

<style>
    /* ---------- BACK BUTTON ---------- */
    .btn-back {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        padding: 6px 16px;
        background: #2d6a4f;
        color: #fff;
        border-radius: 999px;
        text-decoration: none;
        font-size: .9rem;
    }

        .btn-back:hover {
            background: #1b4332;
            color: #fff;
        }

    /* ---------- PAGE TITLE ---------- */
    .page-title {
        font-weight: 700;
        color: #1b4332;
    }

    /* ---------- TEAM LIST ---------- */
    .team-list {
        display: flex;
        flex-direction: column;
        gap: 12px;
        margin-top: 10px;
    }

    .team-row {
        display: flex;
        align-items: center;
        gap: 14px;
        background: #fff;
        border-radius: 14px;
        padding: 12px 14px;
        box-shadow: 0 2px 12px rgba(0,0,0,.06);
        cursor: pointer;
        transition: background .2s ease;
    }

        .team-row:hover {
            background: #f8f9fa;
        }

    /* ---------- TEAM LOGO ---------- */
    .team-avatar {
        width: 52px;
        height: 52px;
        border-radius: 50%;
        object-fit: cover;
        background: #e9ecef;
        border: 2px solid #dee2e6;
        flex-shrink: 0;
    }

    /* ---------- TEAM INFO ---------- */
    .team-info {
        flex: 1;
        min-width: 0;
    }

    .team-name {
        font-weight: 600;
        font-size: 1rem;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }

    .team-meta {
        font-size: .85rem;
        color: #6c757d;
        display: flex;
        align-items: center;
        flex-wrap: wrap;
        gap: 6px;
    }

        .team-meta i {
            color: #40916c;
        }

    .dot {
        opacity: .6;
    }

    /* ---------- ARROW ---------- */
    .arrow {
        color: #adb5bd;
        font-size: .9rem;
    }

    /* ---------- MOBILE REFINEMENT ---------- */
   @@media (max-width: 768px) {
        .team-row

    {
        padding: 10px 12px;
    }

    .team-avatar {
        width: 46px;
        height: 46px;
    }

    .team-name {
        font-size: .95rem;
    }

    }
</style>
